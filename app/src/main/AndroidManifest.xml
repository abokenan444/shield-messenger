<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Tor Network Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Biometric Authentication -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <!-- Audio Recording for Voice Messages -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Camera and Gallery for Photo Messages -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />

    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />

    <!-- Foreground Service for Tor (Ping-Pong Protocol) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Notifications (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Exact Alarm for Service Restart (Android 13+, automatically granted) -->
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <!-- Boot Receiver - Start services after device reboot -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".SecureLegionApplication"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SecureLegion"
        android:networkSecurityConfig="@xml/network_security_config">

        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".ChatActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".ComposeActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".AddFriendActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".RecentTransactionsActivity"
            android:exported="false" />

        <activity
            android:name=".QRScannerActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".BackupSeedPhraseActivity"
            android:exported="false" />

        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/Theme.SecureLegion.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LockActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustNothing" />

        <activity
            android:name=".SettingsActivity"
            android:exported="false" />

        <activity
            android:name=".SecurityModeActivity"
            android:exported="false" />

        <activity
            android:name=".DuressPinActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".WalletIdentityActivity"
            android:exported="false" />

        <activity
            android:name=".WalletActivity"
            android:exported="false" />

        <activity
            android:name=".DevicePasswordActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".NotificationsActivity"
            android:exported="false" />

        <activity
            android:name=".AboutActivity"
            android:exported="false" />

        <activity
            android:name=".BridgeActivity"
            android:exported="false" />

        <activity
            android:name=".AutoLockActivity"
            android:exported="false" />

        <activity
            android:name=".WipeAccountActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".WelcomeActivity"
            android:exported="false"
            android:theme="@style/Theme.SecureLegion.NoStartingWindow" />

        <activity
            android:name=".CreateAccountActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".AccountCreatedActivity"
            android:exported="false" />

        <activity
            android:name=".RestoreAccountActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ReceiveActivity"
            android:exported="false" />

        <activity
            android:name=".SendActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".SendMoneyActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".RequestMoneyActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".ContactOptionsActivity"
            android:exported="false" />

        <activity
            android:name=".ManageTokensActivity"
            android:exported="false" />

        <activity
            android:name=".TransactionsActivity"
            android:exported="false" />

        <activity
            android:name=".TransactionDetailActivity"
            android:exported="false" />

        <activity
            android:name=".WalletSettingsActivity"
            android:exported="false" />

        <activity
            android:name=".CreateWalletActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".ImportWalletActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".TransferDetailsActivity"
            android:exported="false" />

        <activity
            android:name=".RequestDetailsActivity"
            android:exported="false" />

        <activity
            android:name=".AcceptPaymentActivity"
            android:exported="false" />

        <!-- Tor daemon - In-process Tor via JNI (from tor-android library) -->
        <service
            android:name="org.torproject.jni.TorService"
            android:enabled="true"
            android:exported="false"
            android:stopWithTask="false" />

        <!-- Tor foreground service - Shows notification and handles Ping-Pong protocol -->
        <service
            android:name=".services.TorService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse"
            android:stopWithTask="false">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="Maintains Tor hidden service for secure P2P messaging" />
        </service>

        <!-- Download message service - Handles background message downloads -->
        <service
            android:name=".services.DownloadMessageService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="Downloads encrypted messages via Tor" />
        </service>

        <!-- Broadcast receiver for TorService restart via AlarmManager -->
        <receiver
            android:name=".receivers.TorServiceRestartReceiver"
            android:enabled="true"
            android:exported="false" />

        <!-- Boot receiver - Start services after device reboot -->
        <receiver
            android:name=".receivers.BootReceiver"
            android:enabled="true"
            android:exported="true"
            android:directBootAware="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- FileProvider for sharing images -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>