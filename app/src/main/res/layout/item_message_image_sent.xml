<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- Timestamp Header (Day/Date) -->
    <TextView
        android:id="@+id/timestampHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Today"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="12sp"
        android:paddingBottom="8dp"
        android:visibility="gone" />

    <!-- Message Content Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- Image with rounded corners (no bubble background) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/messageBubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- Image Content -->
                <ImageView
                    android:id="@+id/messageImage"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxHeight="280dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="Image message" />

                <!-- Delivery status indicator - inside image, bottom right -->
                <ImageView
                    android:id="@+id/messageStatus"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/status_pending"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp"
                    android:contentDescription="Message status"
                    android:visibility="visible" />

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <!-- Swipe-revealed timestamp (right side) -->
        <TextView
            android:id="@+id/swipeRevealedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:34 PM"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="11sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:visibility="gone" />

        <!-- Selection Checkbox (shown in delete mode) -->
        <CheckBox
            android:id="@+id/messageCheckbox"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            android:button="@drawable/circular_checkbox" />

    </LinearLayout>

</LinearLayout>
