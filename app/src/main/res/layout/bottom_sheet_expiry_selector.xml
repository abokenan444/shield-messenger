<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_bg"
    android:paddingTop="8dp"
    android:paddingBottom="24dp">

    <!-- Handle Bar -->
    <View
        android:layout_width="60dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:background="#4A4A4A"
        android:layout_marginBottom="16dp" />

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request Expires In"
        android:textSize="22sp"
        android:textColor="@color/text_white"
        android:fontFamily="@font/space_grotesk_bold"
        android:gravity="center"
        android:paddingBottom="24dp" />

    <!-- Expiry Options Container -->
    <LinearLayout
        android:id="@+id/expiryOptionsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <!-- 15 Minutes -->
        <LinearLayout
            android:id="@+id/option15Min"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/chat_item_bg"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15 minutes"
                android:textSize="16sp"
                android:textColor="@color/text_white"
                android:fontFamily="@font/poppins_medium" />

            <ImageView
                android:id="@+id/check15Min"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check"
                app:tint="#00D4AA"
                android:visibility="gone"
                android:contentDescription="Selected" />

        </LinearLayout>

        <!-- 1 Hour -->
        <LinearLayout
            android:id="@+id/option1Hour"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/chat_item_bg"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1 hour"
                android:textSize="16sp"
                android:textColor="@color/text_white"
                android:fontFamily="@font/poppins_medium" />

            <ImageView
                android:id="@+id/check1Hour"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check"
                app:tint="#00D4AA"
                android:visibility="gone"
                android:contentDescription="Selected" />

        </LinearLayout>

        <!-- 6 Hours -->
        <LinearLayout
            android:id="@+id/option6Hours"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/chat_item_bg"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6 hours"
                android:textSize="16sp"
                android:textColor="@color/text_white"
                android:fontFamily="@font/poppins_medium" />

            <ImageView
                android:id="@+id/check6Hours"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check"
                app:tint="#00D4AA"
                android:visibility="gone"
                android:contentDescription="Selected" />

        </LinearLayout>

        <!-- 24 Hours (Default) -->
        <LinearLayout
            android:id="@+id/option24Hours"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/chat_item_bg"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="24 hours"
                android:textSize="16sp"
                android:textColor="@color/text_white"
                android:fontFamily="@font/poppins_medium" />

            <ImageView
                android:id="@+id/check24Hours"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check"
                app:tint="#00D4AA"
                android:visibility="visible"
                android:contentDescription="Selected" />

        </LinearLayout>

        <!-- 48 Hours -->
        <LinearLayout
            android:id="@+id/option48Hours"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/chat_item_bg"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="48 hours"
                android:textSize="16sp"
                android:textColor="@color/text_white"
                android:fontFamily="@font/poppins_medium" />

            <ImageView
                android:id="@+id/check48Hours"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check"
                app:tint="#00D4AA"
                android:visibility="gone"
                android:contentDescription="Selected" />

        </LinearLayout>

        <!-- 7 Days -->
        <LinearLayout
            android:id="@+id/option7Days"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/chat_item_bg"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7 days"
                android:textSize="16sp"
                android:textColor="@color/text_white"
                android:fontFamily="@font/poppins_medium" />

            <ImageView
                android:id="@+id/check7Days"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check"
                app:tint="#00D4AA"
                android:visibility="gone"
                android:contentDescription="Selected" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
