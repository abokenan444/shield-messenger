<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- Timestamp Header -->
    <TextView
        android:id="@+id/timestampHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Today"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="12sp"
        android:paddingBottom="8dp"
        android:visibility="gone" />

    <!-- Payment Received Card (aligned left) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:paddingStart="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/messageBubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#1A1A1A">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp"
                android:minWidth="160dp">

                <!-- "Received" label with checkmark -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#00D4AA"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/paymentLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="Received"
                        android:textColor="#00D4AA"
                        android:textSize="11sp" />

                </LinearLayout>

                <!-- USD Amount big -->
                <TextView
                    android:id="@+id/paymentAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="$0.75"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <!-- Crypto amount smaller below -->
                <TextView
                    android:id="@+id/paymentAmountUsd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.005 SOL"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Tap for details -->
                <TextView
                    android:id="@+id/tapForDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Tap for details"
                    android:textColor="#555555"
                    android:textSize="11sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <CheckBox
            android:id="@+id/messageCheckbox"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            android:button="@drawable/circular_checkbox" />

    </LinearLayout>

</LinearLayout>
