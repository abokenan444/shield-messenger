<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/backButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back" />

        </FrameLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/subscription"
            android:textSize="24sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="@font/space_grotesk_bold"
            android:gravity="center" />

        <View
            android:layout_width="42dp"
            android:layout_height="42dp" />

    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="32dp">

            <!-- Current Plan Badge -->
            <TextView
                android:id="@+id/currentPlanLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_plan_free"
                android:textSize="14sp"
                android:textColor="#888888"
                android:fontFamily="@font/poppins_medium"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp" />

            <!-- FREE Tier Card -->
            <LinearLayout
                android:id="@+id/freeTierCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_box_bg"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/free"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/space_grotesk_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/n_0_month"
                    android:textSize="16sp"
                    android:textColor="#4CAF50"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="4dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333333"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/endtoend_encrypted_messagingn_voice_call"
                    android:textSize="13sp"
                    android:textColor="#AAAAAA"
                    android:fontFamily="@font/poppins_medium"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

            <!-- SUPPORTER Tier Card -->
            <LinearLayout
                android:id="@+id/supporterTierCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_box_bg"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/supporter"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/space_grotesk_bold" />

                    <TextView
                        android:id="@+id/supporterBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/recommended"
                        android:textSize="10sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppins_medium"
                        android:background="@drawable/badge_bg"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/supporterPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/n_499_month"
                    android:textSize="16sp"
                    android:textColor="#4CAF50"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="4dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333333"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/everything_in_freen_video_calls_over_tor"
                    android:textSize="13sp"
                    android:textColor="#AAAAAA"
                    android:fontFamily="@font/poppins_medium"
                    android:lineSpacingExtra="4dp" />

                <TextView
                    android:id="@+id/subscribeButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="@string/subscribe"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/badge_bg"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <!-- ENTERPRISE Tier Card -->
            <LinearLayout
                android:id="@+id/enterpriseTierCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_box_bg"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enterprise"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/space_grotesk_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_us"
                    android:textSize="16sp"
                    android:textColor="#4CAF50"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="4dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333333"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/everything_in_supportern_custom_tor_brid"
                    android:textSize="13sp"
                    android:textColor="#AAAAAA"
                    android:fontFamily="@font/poppins_medium"
                    android:lineSpacingExtra="4dp" />

                <TextView
                    android:id="@+id/contactButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="@string/contact_sales"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/settings_box_bg" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
