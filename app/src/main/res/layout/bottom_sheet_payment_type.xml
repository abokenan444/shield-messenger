<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/wallet_dropdown_bg"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="20dp"
    android:paddingBottom="32dp">

    <!-- Title -->
    <TextView
        android:id="@+id/paymentTypeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment Type"
        android:textSize="20sp"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="@font/space_grotesk_bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Option 1 (Normal / Transparent) -->
    <LinearLayout
        android:id="@+id/paymentTypeOption1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/wallet_token_bg"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/option1Icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_solana"
            android:scaleType="fitCenter"
            android:layout_marginEnd="14dp"
            android:contentDescription="Option 1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/option1Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_medium" />

            <TextView
                android:id="@+id/option1Desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Standard transaction"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_regular" />

        </LinearLayout>

        <ImageView
            android:id="@+id/option1Check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/checkbox_on_background"
            app:tint="?attr/colorOnSurfaceVariant"
            android:visibility="gone"
            android:contentDescription="Selected" />

    </LinearLayout>

    <!-- Option 2 (Private / Shielded) -->
    <LinearLayout
        android:id="@+id/paymentTypeOption2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/wallet_token_bg"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/option2Icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_solana"
            android:scaleType="fitCenter"
            android:layout_marginEnd="14dp"
            android:contentDescription="Option 2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/option2Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Private"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_medium" />

            <TextView
                android:id="@+id/option2Desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Standard Solana transaction"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_regular" />

        </LinearLayout>

        <ImageView
            android:id="@+id/option2Check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/checkbox_on_background"
            app:tint="?attr/colorOnSurfaceVariant"
            android:visibility="visible"
            android:contentDescription="Selected" />

    </LinearLayout>

    <!-- Option 3 (Anonymous - SOL only, hidden for ZEC) -->
    <LinearLayout
        android:id="@+id/paymentTypeOption3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/wallet_token_bg"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/option3Icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_solana"
            android:scaleType="fitCenter"
            android:layout_marginEnd="14dp"
            android:contentDescription="Option 3" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/option3Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anonymous"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_medium" />

            <TextView
                android:id="@+id/option3Desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Standard Solana transaction"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_regular" />

        </LinearLayout>

        <ImageView
            android:id="@+id/option3Check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/checkbox_on_background"
            app:tint="?attr/colorOnSurfaceVariant"
            android:visibility="gone"
            android:contentDescription="Selected" />

    </LinearLayout>

</LinearLayout>
