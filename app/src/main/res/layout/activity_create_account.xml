<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/header_bg">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/createAccountHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/header_bg"
        android:fitsSystemWindows="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="‹"
            android:textSize="32sp"
            android:textColor="@color/text_white"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_header"
            android:layout_marginStart="24dp"
            android:contentDescription="Secure Legion Logo" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CREATE ACCOUNT"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:gravity="center"
            android:layout_marginEnd="64dp" />

    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/createAccountHeader"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Password Section (hidden after wallet creation) -->
            <LinearLayout
                android:id="@+id/passwordSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Password Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/passwordInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_field_bg"
                    android:hint="Enter password"
                    android:inputType="textPassword"
                    android:textColorHint="@color/text_gray"
                    android:textColor="@color/text_white"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp" />

                <!-- Confirm Password Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/confirmPasswordInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_field_bg"
                    android:hint="Confirm password"
                    android:inputType="textPassword"
                    android:textColorHint="@color/text_gray"
                    android:textColor="@color/text_white"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp" />

                <!-- Password Requirements Helper -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password must be at least 9 characters and contain:\n• Uppercase letter\n• Lowercase letter\n• Number\n• Special character (!@#$%^&amp;*)"
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"
                    android:layout_marginBottom="24dp" />

            </LinearLayout>

            <!-- Create Wallet Button -->
            <TextView
                android:id="@+id/createWalletButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create a New Wallet"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_white"
                android:background="@drawable/metallic_button_bg"
                android:gravity="center"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:elevation="6dp"
                android:layout_marginBottom="24dp" />

            <!-- Wallet Address Section (hidden initially) -->
            <LinearLayout
                android:id="@+id/walletAddressSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Public Wallet Address"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/walletAddressText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_field_bg"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:fontFamily="monospace"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

            <!-- Username Section (hidden initially) -->
            <LinearLayout
                android:id="@+id/usernameSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Desired Username"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/usernameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_field_bg"
                    android:hint="Enter desired username"
                    android:textColorHint="@color/text_gray"
                    android:textColor="@color/text_white"
                    android:textSize="18sp"
                    android:padding="20dp"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>


            <!-- Create Account Section (hidden initially) -->
            <LinearLayout
                android:id="@+id/createSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/createAccountButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create Account"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white"
                    android:background="@drawable/metallic_button_bg"
                    android:gravity="center"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="6dp"
                    android:layout_marginBottom="12dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
