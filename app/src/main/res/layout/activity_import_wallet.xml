<?xml version="1.0" encoding="utf-8"?>
<!-- Import Wallet Activity -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <FrameLayout
            android:id="@+id/backButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back" />

        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Import Wallet"
            android:textSize="24sp"
            android:textColor="#999999"
            android:fontFamily="@font/space_grotesk_bold"
            android:gravity="center" />

        <!-- Spacer for alignment -->
        <View
            android:layout_width="42dp"
            android:layout_height="42dp" />

    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/importButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Instructions -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Import an existing wallet using a private key or seed phrase. Make sure to keep your keys secure."
                android:textSize="14sp"
                android:textColor="@color/text_gray"
                android:lineSpacingExtra="2dp"
                android:layout_marginBottom="24dp" />

            <!-- Chain Selector -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECT CHAIN"
                android:textSize="11sp"
                android:textColor="@color/text_gray"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Solana Button -->
                <LinearLayout
                    android:id="@+id/solanaChainButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/wallet_dropdown_bg"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_solana"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Solana" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Solana"
                        android:textSize="14sp"
                        android:textColor="@color/text_white"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>

                <!-- Zcash Button -->
                <LinearLayout
                    android:id="@+id/zcashChainButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/wallet_dropdown_bg"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_zcash"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Zcash" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zcash"
                        android:textSize="14sp"
                        android:textColor="@color/text_white"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>

            </LinearLayout>

            <!-- Wallet Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WALLET NAME"
                android:textSize="11sp"
                android:textColor="@color/text_gray"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/walletNameInput"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/settings_box_bg"
                android:hint="My Imported Wallet"
                android:textColorHint="@color/text_gray"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:inputType="text"
                android:maxLines="1"
                android:layout_marginBottom="24dp" />

            <!-- Solana Import Type Selector (only visible for Solana) -->
            <LinearLayout
                android:id="@+id/solanaImportTypeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IMPORT TYPE"
                    android:textSize="11sp"
                    android:textColor="@color/text_gray"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <!-- Seed Phrase Button -->
                    <LinearLayout
                        android:id="@+id/seedPhraseTypeButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/wallet_dropdown_bg"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="12dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seed Phrase"
                            android:textSize="14sp"
                            android:textColor="@color/text_white"
                            android:fontFamily="@font/poppins_medium" />

                    </LinearLayout>

                    <!-- Private Key Button -->
                    <LinearLayout
                        android:id="@+id/privateKeyTypeButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/wallet_dropdown_bg"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Private Key"
                            android:textSize="14sp"
                            android:textColor="@color/text_white"
                            android:fontFamily="@font/poppins_medium" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Seed Phrase Input (Solana) -->
            <LinearLayout
                android:id="@+id/seedPhraseInputContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SEED PHRASE"
                    android:textSize="11sp"
                    android:textColor="@color/text_gray"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/seedPhraseInput"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/settings_box_bg"
                    android:hint="Enter 12 or 24-word seed phrase of Solana wallet"
                    android:textColorHint="@color/text_gray"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular"
                    android:padding="16dp"
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:maxLines="5"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

            <!-- Private Key Input (Solana) -->
            <LinearLayout
                android:id="@+id/privateKeyInputContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRIVATE KEY"
                    android:textSize="11sp"
                    android:textColor="@color/text_gray"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/privateKeyInput"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/settings_box_bg"
                    android:hint="Base58 string or JSON array [1,2,3,...]"
                    android:textColorHint="@color/text_gray"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular"
                    android:padding="16dp"
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:maxLines="5"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

            <!-- Zcash Seed Phrase Input -->
            <LinearLayout
                android:id="@+id/zcashSeedPhraseInputContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SEED PHRASE"
                    android:textSize="11sp"
                    android:textColor="@color/text_gray"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/zcashSeedPhraseInput"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/settings_box_bg"
                    android:hint="Enter 24-word seed phrase of Zcash wallet"
                    android:textColorHint="@color/text_gray"
                    android:textColor="@color/text_white"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular"
                    android:padding="16dp"
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:maxLines="5"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

            <!-- Zcash Birthday Height Input -->
            <LinearLayout
                android:id="@+id/zcashBirthdayContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BIRTHDAY HEIGHT (OPTIONAL)"
                    android:textSize="11sp"
                    android:textColor="@color/text_gray"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/birthdayHeightInput"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/settings_box_bg"
                    android:hint="Leave empty to use current height"
                    android:textColorHint="@color/text_gray"
                    android:textColor="@color/text_white"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:inputType="number"
                    android:maxLines="1"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

            <!-- Warning -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:padding="12dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_lock"
                    app:tint="#FFA500"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="top"
                    android:contentDescription="Warning" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Never share your private key or seed phrase. Anyone with access to it can control your funds."
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Import Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/importButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="24dp"
        android:background="@drawable/swap_button_bg"
        android:fontFamily="@font/poppins_semibold"
        android:text="Import Wallet"
        android:textAllCaps="false"
        android:textColor="@color/text_white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
