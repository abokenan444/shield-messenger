<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:fitsSystemWindows="true">

        <!-- Back Button -->
        <FrameLayout
            android:id="@+id/backButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back" />

        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/swap_crypto"
            android:textSize="22sp"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="@font/space_grotesk_bold"
            android:gravity="center" />

        <!-- Spacer to balance the back button -->
        <View
            android:layout_width="42dp"
            android:layout_height="42dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingBottom="32dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- ============ FROM CARD ============ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:background="@drawable/swap_card_top_bg"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_marginTop="16dp">

                <!-- Top row: label + token pill -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/your_assets"
                        android:textSize="14sp"
                        android:textColor="#888888"
                        android:fontFamily="@font/poppins_regular" />

                    <!-- Token selector pill -->
                    <LinearLayout
                        android:id="@+id/fromTokenSelector"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/swap_token_pill_bg"
                        android:paddingStart="6dp"
                        android:paddingEnd="10dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/fromTokenIcon"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_solana"
                            android:contentDescription="From token" />

                        <TextView
                            android:id="@+id/fromTokenText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sol"
                            android:textSize="13sp"
                            android:textColor="?attr/colorOnSurface"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginStart="6dp" />

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/ic_arrow_down"
                            app:tint="#888888"
                            android:contentDescription="Select token" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Amount (large) -->
                <EditText
                    android:id="@+id/fromAmountInput"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/space_grotesk_bold"
                    android:gravity="bottom"
                    android:hint="@string/n_0"
                    android:inputType="numberDecimal"
                    android:maxLength="12"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="#333333"
                    android:textCursorDrawable="@null"
                    android:textSize="40sp" />

                <!-- Balance row -->
                <TextView
                    android:id="@+id/fromBalanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/balance_00000"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- ============ SWAP CIRCLE (slightly overlaps both cards) ============ -->
            <FrameLayout
                android:id="@+id/swapDirectionButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-18dp"
                android:layout_marginBottom="-18dp"
                android:elevation="4dp"
                android:background="@drawable/swap_circle_bg"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_swap_horizontal"
                    android:contentDescription="Swap direction" />

            </FrameLayout>

            <!-- ============ TO CARD ============ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:background="@drawable/swap_card_bottom_bg"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <!-- Top row: label + token pill -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/assets_swap"
                        android:textSize="14sp"
                        android:textColor="#888888"
                        android:fontFamily="@font/poppins_regular" />

                    <!-- Token selector pill -->
                    <LinearLayout
                        android:id="@+id/toTokenSelector"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/swap_token_pill_bg"
                        android:paddingStart="6dp"
                        android:paddingEnd="10dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/toTokenIcon"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_usdc"
                            android:contentDescription="To token" />

                        <TextView
                            android:id="@+id/toTokenText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/usdc"
                            android:textSize="13sp"
                            android:textColor="?attr/colorOnSurface"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginStart="6dp" />

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginStart="4dp"
                            android:src="@drawable/ic_arrow_down"
                            app:tint="#888888"
                            android:contentDescription="Select token" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Amount (large, read-only) -->
                <TextView
                    android:id="@+id/toAmountText"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/space_grotesk_bold"
                    android:gravity="bottom"
                    android:text="@string/n_0"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="40sp" />

                <!-- Balance row -->
                <TextView
                    android:id="@+id/toBalanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/balance_00000"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- ============ SWAP BUTTON ============ -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/swapButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/swap_button_bg"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="@string/swap"
                android:textAllCaps="false"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
