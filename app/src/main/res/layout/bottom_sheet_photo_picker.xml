<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_bg"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="24dp"
    android:paddingBottom="32dp">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_profile_photo"
        android:textSize="22sp"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="@font/space_grotesk_bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Take Photo -->
    <LinearLayout
        android:id="@+id/optionTakePhoto"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="@drawable/settings_box_bg"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true">

        <FrameLayout
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/settings_icon_bg"
            android:layout_marginEnd="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_camera"
                app:tint="?attr/colorOnSurfaceVariant" />

        </FrameLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/take_photo"
            android:textSize="16sp"
            android:textColor="#8C8C8C"
            android:fontFamily="@font/poppins_medium" />

        <FrameLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/arrow_bg">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_forward" />

        </FrameLayout>

    </LinearLayout>

    <!-- Choose from Gallery -->
    <LinearLayout
        android:id="@+id/optionGallery"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="@drawable/settings_box_bg"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true">

        <FrameLayout
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/settings_icon_bg"
            android:layout_marginEnd="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_image"
                app:tint="?attr/colorOnSurfaceVariant" />

        </FrameLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/choose_from_gallery"
            android:textSize="16sp"
            android:textColor="#8C8C8C"
            android:fontFamily="@font/poppins_medium" />

        <FrameLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/arrow_bg">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_forward" />

        </FrameLayout>

    </LinearLayout>

    <!-- Remove Photo -->
    <LinearLayout
        android:id="@+id/optionRemovePhoto"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="@drawable/settings_box_bg"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <FrameLayout
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/settings_icon_bg"
            android:layout_marginEnd="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_delete"
                app:tint="?attr/colorOnSurfaceVariant" />

        </FrameLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/remove_photo"
            android:textSize="16sp"
            android:textColor="#8C8C8C"
            android:fontFamily="@font/poppins_medium" />

        <FrameLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/arrow_bg">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_forward" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
