<?xml version="1.0" encoding="utf-8"?>
<!-- ShadowWire Privacy Pool Screen -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <FrameLayout
            android:id="@+id/backButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back" />

        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Privacy Pool"
            android:textSize="28sp"
            android:textColor="#999999"
            android:fontFamily="@font/space_grotesk_bold"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Activity History Button -->
        <FrameLayout
            android:id="@+id/historyButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_clock"
                android:tint="#888888"
                android:contentDescription="Pool Activity" />

        </FrameLayout>

    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <!-- Pool Balance Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/wallet_balance_bg"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:gravity="center_vertical"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_solana"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Solana" />

                <TextView
                    android:id="@+id/poolBalanceAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-- SOL"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/space_grotesk_bold" />

                <FrameLayout
                    android:id="@+id/poolBalanceToggle"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_swap"
                        android:tint="#888888"
                        android:contentDescription="Toggle currency display" />

                </FrameLayout>

            </LinearLayout>

            <!-- Pool Balance Subtext -->
            <TextView
                android:id="@+id/poolBalanceSubtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="12sp"
                android:textColor="#666666"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginStart="28dp"
                android:layout_marginBottom="4dp" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:gravity="center">

                <!-- Deposit Button -->
                <LinearLayout
                    android:id="@+id/depositButton"
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/wallet_action_button_bg"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_deposit"
                        android:tint="#888888"
                        android:layout_marginBottom="6dp"
                        android:contentDescription="Deposit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deposit"
                        android:textSize="12sp"
                        android:textColor="#AAAAAA"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>

                <!-- Withdraw Button -->
                <LinearLayout
                    android:id="@+id/withdrawButton"
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/wallet_action_button_bg"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_withdraw"
                        android:tint="#888888"
                        android:layout_marginBottom="6dp"
                        android:contentDescription="Withdraw" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Withdraw"
                        android:textSize="12sp"
                        android:textColor="#AAAAAA"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>

                <!-- Private Send Button -->
                <LinearLayout
                    android:id="@+id/privateSendButton"
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/wallet_action_button_bg"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_shield"
                        android:tint="#888888"
                        android:layout_marginBottom="6dp"
                        android:contentDescription="Private Send" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Private"
                        android:textSize="12sp"
                        android:textColor="#AAAAAA"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>

                <!-- Anon Send Button -->
                <LinearLayout
                    android:id="@+id/anonSendButton"
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/wallet_action_button_bg"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_incognito"
                        android:tint="#888888"
                        android:layout_marginBottom="6dp"
                        android:contentDescription="Anonymous Send" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anon"
                        android:textSize="12sp"
                        android:textColor="#AAAAAA"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>

            </LinearLayout>

            <!-- How It Works Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="28dp"
                android:paddingEnd="28dp"
                android:paddingBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How It Works"
                    android:textSize="18sp"
                    android:textColor="@color/text_white"
                    android:fontFamily="@font/space_grotesk_bold"
                    android:paddingBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deposit SOL into the privacy pool. Then send privately with hidden amounts (Private Send) or anonymously where your identity is hidden (Anon Send). Withdraw anytime back to your wallet."
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppins_regular"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

            <!-- Spacer to push RADR branding to bottom -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Powered by RADR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingStart="28dp"
                android:paddingEnd="28dp"
                android:paddingTop="24dp"
                android:paddingBottom="32dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_radr_logo"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="RADR" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Powered by RADR Privacy Pool Â· 0.5% fee"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/poppins_regular" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
