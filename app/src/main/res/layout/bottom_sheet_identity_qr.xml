<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_bg"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="24dp"
    android:paddingBottom="32dp">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Card"
        android:textSize="24sp"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="@font/space_grotesk_bold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share this so others can add you"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- QR Code Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/qrCodeImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:contentDescription="Contact Card QR Code" />

    </androidx.cardview.widget.CardView>

    <!-- Friend Request Address -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Friend Request Address"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#8C8C8C"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/lock_password_input_bg"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/cidText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="12sp"
            android:textColor="#8C8C8C"
            android:fontFamily="@font/poppins_regular"
            android:gravity="start|center_vertical"
            android:ellipsize="middle"
            android:maxLines="1" />

        <FrameLayout
            android:id="@+id/copyCidButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/settings_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_share"
                app:tint="?attr/colorOnSurfaceVariant" />

        </FrameLayout>

    </LinearLayout>

    <!-- Contact PIN -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact PIN"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#8C8C8C"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/lock_password_input_bg"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/pinText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="16sp"
            android:textColor="#8C8C8C"
            android:fontFamily="@font/poppins_medium"
            android:gravity="start|center_vertical"
            android:letterSpacing="0.15"
            android:maxLines="1" />

        <FrameLayout
            android:id="@+id/copyPinButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/settings_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_share"
                app:tint="?attr/colorOnSurfaceVariant" />

        </FrameLayout>

    </LinearLayout>

    <!-- Share Button -->
    <TextView
        android:id="@+id/shareQrButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/swap_button_bg"
        android:gravity="center"
        android:text="Share"
        android:textSize="18sp"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="@font/poppins_semibold"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>
