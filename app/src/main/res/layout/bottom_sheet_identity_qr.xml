<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_bg"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="24dp"
    android:paddingBottom="32dp">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Identity QR Code"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/space_grotesk_bold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share this QR code so others can add you"
        android:textSize="14sp"
        android:textColor="#888888"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- QR Code Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp">

        <!-- QR Code Image -->
        <ImageView
            android:id="@+id/qrCodeImage"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:contentDescription="Identity QR Code" />

    </androidx.cardview.widget.CardView>

    <!-- CID Display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/lock_password_input_bg"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/cidText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="12sp"
            android:textColor="#8C8C8C"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:ellipsize="middle"
            android:maxLines="1" />

    </LinearLayout>

    <!-- Share Button -->
    <TextView
        android:id="@+id/shareQrButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/swap_button_bg"
        android:gravity="center"
        android:text="Share"
        android:textSize="18sp"
        android:textColor="@color/text_white"
        android:fontFamily="@font/poppins_semibold"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>
