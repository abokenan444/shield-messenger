<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- Timestamp Header (Day/Date) -->
    <TextView
        android:id="@+id/timestampHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/today"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="12sp"
        android:paddingBottom="8dp"
        android:visibility="gone" />

    <!-- Message Content Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- Message Bubble -->
        <LinearLayout
            android:id="@+id/messageBubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:maxWidth="280dp"
            android:background="@drawable/message_sent_bg"
            android:padding="12dp"
            android:baselineAligned="false">

            <TextView
                android:id="@+id/messageText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/message_content"
                android:textColor="?attr/colorOnSurface"
                android:textSize="17sp"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingMultiplier="1.2" />

            <!-- Delivery status indicator (circle with checkmarks) - right of text, inline with text baseline -->
            <ImageView
                android:id="@+id/messageStatus"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/status_pending"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="2dp"
                android:layout_gravity="bottom"
                android:contentDescription="Message status"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Swipe-revealed timestamp (right side) -->
        <TextView
            android:id="@+id/swipeRevealedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/n_1234_pm"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="11sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:visibility="gone" />

        <!-- Selection Checkbox (shown in delete mode) -->
        <CheckBox
            android:id="@+id/messageCheckbox"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            android:button="@drawable/circular_checkbox" />

    </LinearLayout>

</LinearLayout>
