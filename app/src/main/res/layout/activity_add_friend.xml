<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <FrameLayout
            android:id="@+id/backButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back" />

        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Friend"
            android:textSize="24sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="@font/space_grotesk_bold"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Delete Button -->
        <FrameLayout
            android:id="@+id/deleteButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_delete"
                android:contentDescription="Delete" />

        </FrameLayout>

    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:id="@+id/addFriendScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friends Address"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#8C8C8C"
                android:layout_marginBottom="8dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="24dp">

                <EditText
                    android:id="@+id/cidInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/lock_password_input_bg"
                    android:hint="friend.onion"
                    android:inputType="text"
                    android:textColorHint="#666666"
                    android:textColor="#8C8C8C"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="56dp" />

                <FrameLayout
                    android:id="@+id/scanQrButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/settings_icon_bg"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_qr_code"
                        app:tint="?attr/colorOnSurfaceVariant"
                        android:contentDescription="Scan QR Code" />

                </FrameLayout>

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact PIN"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#8C8C8C"
                android:layout_marginBottom="8dp" />

            <!-- PIN Input Boxes in phone format: XXX-XXX-XXXX -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <!-- First group: 3 digits -->
                <EditText
                    android:id="@+id/pinBox1"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/pin_box_bg"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="#8C8C8C"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium" />

                <EditText
                    android:id="@+id/pinBox2"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/pin_box_bg"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="#8C8C8C"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium" />

                <EditText
                    android:id="@+id/pinBox3"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/pin_box_bg"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="#8C8C8C"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium" />

                <!-- Dash separator -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="-"
                    android:textColor="#666666"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp" />

                <!-- Second group: 3 digits -->
                <EditText
                    android:id="@+id/pinBox4"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/pin_box_bg"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="#8C8C8C"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium" />

                <EditText
                    android:id="@+id/pinBox5"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/pin_box_bg"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="#8C8C8C"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium" />

                <EditText
                    android:id="@+id/pinBox6"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/pin_box_bg"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="#8C8C8C"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium" />

                <!-- Dash separator -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="-"
                    android:textColor="#666666"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp" />

                <!-- Third group: 4 digits -->
                <EditText
                    android:id="@+id/pinBox7"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/pin_box_bg"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="#8C8C8C"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium" />

                <EditText
                    android:id="@+id/pinBox8"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/pin_box_bg"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="#8C8C8C"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium" />

                <EditText
                    android:id="@+id/pinBox9"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/pin_box_bg"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="#8C8C8C"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium" />

                <EditText
                    android:id="@+id/pinBox10"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:background="@drawable/pin_box_bg"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColor="#8C8C8C"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium" />

            </LinearLayout>

            <!-- Hidden original PIN input for compatibility -->
            <EditText
                android:id="@+id/pinInput"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/handleInput"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:visibility="gone" />

            <!-- Friend Requests Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friend Requests"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#8C8C8C"
                android:layout_marginBottom="12dp" />


            <!-- Friend Requests Section -->
            <LinearLayout
                android:id="@+id/friendRequestsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <!-- Friend requests will be added here dynamically -->
                <LinearLayout
                    android:id="@+id/friendRequestsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

            <!-- Send Friend Request Button -->
            <TextView
                android:id="@+id/searchButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Send Friend Request"
                android:textSize="16sp"
                android:fontFamily="@font/space_grotesk_bold"
                android:textColor="?attr/colorOnSurface"
                android:background="@drawable/settings_box_bg"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="32dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <include
        layout="@layout/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CC000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <ProgressBar
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:indeterminateTint="#FFFFFF"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/loadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sending request..."
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_medium" />

            <TextView
                android:id="@+id/loadingSubtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please wait"
                android:textSize="14sp"
                android:textColor="#CCCCCC"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
