<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Back Button -->
    <FrameLayout
        android:id="@+id/backButton"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/top_icon_bg"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_back_arrow"
            android:contentDescription="Back" />

    </FrameLayout>

    <!-- Signal Quality Bars (top-right) -->
    <LinearLayout
        android:id="@+id/signalBarsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/backButton"
        app:layout_constraintBottom_toBottomOf="@id/backButton">

        <!-- Bar 1 (shortest) -->
        <View
            android:id="@+id/signalBar1"
            android:layout_width="4dp"
            android:layout_height="8dp"
            android:layout_marginEnd="3dp"
            android:background="#4A9EFF"
            android:alpha="0.3" />

        <!-- Bar 2 -->
        <View
            android:id="@+id/signalBar2"
            android:layout_width="4dp"
            android:layout_height="12dp"
            android:layout_marginEnd="3dp"
            android:background="#4A9EFF"
            android:alpha="0.3" />

        <!-- Bar 3 -->
        <View
            android:id="@+id/signalBar3"
            android:layout_width="4dp"
            android:layout_height="16dp"
            android:layout_marginEnd="3dp"
            android:background="#4A9EFF"
            android:alpha="0.3" />

        <!-- Bar 4 -->
        <View
            android:id="@+id/signalBar4"
            android:layout_width="4dp"
            android:layout_height="20dp"
            android:layout_marginEnd="3dp"
            android:background="#4A9EFF"
            android:alpha="0.3" />

        <!-- Bar 5 (tallest) -->
        <View
            android:id="@+id/signalBar5"
            android:layout_width="4dp"
            android:layout_height="24dp"
            android:background="#4A9EFF"
            android:alpha="0.3" />

    </LinearLayout>

    <!-- Title: Secure Call -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secure Call"
        android:textSize="24sp"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="@font/space_grotesk_bold"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/backButton"
        app:layout_constraintBottom_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Call Icon/Waveform Container (centered) -->
    <FrameLayout
        android:id="@+id/callIconContainer"
        android:layout_width="240dp"
        android:layout_height="240dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.3">

        <!-- Animated ring overlay (shown during connecting) -->
        <ImageView
            android:id="@+id/animatedRing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/incoming_call_ring_anim"
            android:contentDescription="Animated call ring" />

        <!-- Lock icon (shown during connecting) -->
        <ImageView
            android:id="@+id/lockIcon"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_call_lock"
            android:contentDescription="Secure call lock icon" />

        <!-- Waveform visualization (shown when connected) -->
        <com.securelegion.ui.WaveformView
            android:id="@+id/waveformView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Call Status (Connecting / Connected) -->
    <TextView
        android:id="@+id/callStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Connecting"
        android:textSize="18sp"
        android:textColor="#CCCCCC"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toBottomOf="@id/callIconContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contact Name -->
    <TextView
        android:id="@+id/contactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@Contact"
        android:textSize="28sp"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="@font/space_grotesk_bold"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/callStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Progress Bar (shown during connecting) -->
    <ProgressBar
        android:id="@+id/connectionProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="4dp"
        android:layout_marginTop="40dp"
        android:indeterminate="false"
        android:progress="0"
        android:max="100"
        android:progressTint="#4A9EFF"
        android:progressBackgroundTint="#333333"
        app:layout_constraintTop_toBottomOf="@id/contactName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Call Timer Container (shown when connected) -->
    <LinearLayout
        android:id="@+id/timerContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/contactName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Waveform bars (mini visualization next to timer) -->
        <View
            android:layout_width="3dp"
            android:layout_height="12dp"
            android:layout_marginEnd="2dp"
            android:background="#4A9EFF" />
        <View
            android:layout_width="3dp"
            android:layout_height="8dp"
            android:layout_marginEnd="2dp"
            android:background="#4A9EFF" />
        <View
            android:layout_width="3dp"
            android:layout_height="16dp"
            android:layout_marginEnd="2dp"
            android:background="#4A9EFF" />
        <View
            android:layout_width="3dp"
            android:layout_height="10dp"
            android:layout_marginEnd="2dp"
            android:background="#4A9EFF" />
        <View
            android:layout_width="3dp"
            android:layout_height="14dp"
            android:layout_marginEnd="2dp"
            android:background="#4A9EFF" />
        <View
            android:layout_width="3dp"
            android:layout_height="8dp"
            android:layout_marginEnd="2dp"
            android:background="#4A9EFF" />
        <View
            android:layout_width="3dp"
            android:layout_height="12dp"
            android:layout_marginEnd="2dp"
            android:background="#4A9EFF" />
        <View
            android:layout_width="3dp"
            android:layout_height="16dp"
            android:layout_marginEnd="2dp"
            android:background="#4A9EFF" />
        <View
            android:layout_width="3dp"
            android:layout_height="10dp"
            android:layout_marginEnd="2dp"
            android:background="#4A9EFF" />
        <View
            android:layout_width="3dp"
            android:layout_height="14dp"
            android:layout_marginEnd="2dp"
            android:background="#4A9EFF" />
        <View
            android:layout_width="3dp"
            android:layout_height="8dp"
            android:layout_marginEnd="2dp"
            android:background="#4A9EFF" />
        <View
            android:layout_width="3dp"
            android:layout_height="12dp"
            android:layout_marginEnd="12dp"
            android:background="#4A9EFF" />

        <!-- Call Timer -->
        <TextView
            android:id="@+id/callTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:10"
            android:textSize="16sp"
            android:textColor="#CCCCCC"
            android:fontFamily="@font/poppins_regular" />

    </LinearLayout>

    <!-- Bottom Control Buttons -->
    <LinearLayout
        android:id="@+id/controlButtonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Mute Button (Circular) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/muteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:src="@drawable/ic_mic"
            app:fabSize="normal"
            app:fabCustomSize="64dp"
            app:maxImageSize="28dp"
            app:tint="#FFFFFF"
            app:backgroundTint="#2C2C2C"
            app:elevation="6dp"
            app:borderWidth="0dp"
            android:contentDescription="Mute microphone" />

        <!-- End Call Button (Circular, Red, Larger) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/endCallButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:src="@drawable/ic_call_end"
            app:fabSize="normal"
            app:fabCustomSize="72dp"
            app:maxImageSize="32dp"
            app:tint="#FFFFFF"
            app:backgroundTint="#FF6B6B"
            app:elevation="6dp"
            app:borderWidth="0dp"
            android:contentDescription="End call" />

        <!-- Speaker Button (Circular) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/speakerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_speaker"
            app:fabSize="normal"
            app:fabCustomSize="64dp"
            app:maxImageSize="28dp"
            app:tint="#FFFFFF"
            app:backgroundTint="#2C2C2C"
            app:elevation="6dp"
            app:borderWidth="0dp"
            android:contentDescription="Toggle speaker" />

    </LinearLayout>

    <!-- Hidden compatibility views -->
    <ImageView
        android:id="@+id/contactAvatar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/muteIcon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/speakerIcon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
