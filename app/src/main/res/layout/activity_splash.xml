<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Logo -->
        <ImageView
            android:id="@+id/splashLogo"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/secure_logo"
            android:layout_marginBottom="16dp"
            android:contentDescription="Secure Legion Logo" />

        <!-- App Name -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SECURE "
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_white"
                android:fontFamily="sans-serif-black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LEGION"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue"
                android:fontFamily="sans-serif-black" />

        </LinearLayout>

        <!-- Tagline -->
        <TextView
            android:id="@+id/appTagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secure Messaging â€¢ Crypto Wallet"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="32dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/torProgressBar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateTint="@color/primary_blue"
            android:layout_marginBottom="16dp" />

        <!-- Status Text -->
        <TextView
            android:id="@+id/torStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connecting to Tor network..."
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:layout_marginBottom="24dp" />

        <!-- Configure Bridges Button (shown on connection failure) -->
        <TextView
            android:id="@+id/configureBridgesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIGURE BRIDGES"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:background="@drawable/settings_item_bg"
            android:gravity="center"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone" />

        <!-- Retry Connection Button (shown after bridge configuration) -->
        <TextView
            android:id="@+id/retryConnectionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RETRY CONNECTION"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:background="@drawable/settings_item_bg"
            android:gravity="center"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
