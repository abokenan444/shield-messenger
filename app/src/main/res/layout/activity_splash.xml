<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/splashLogo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/secure_logo_new"
        android:layout_marginTop="140dp"
        android:contentDescription="Secure Legion Logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- App Title with Gradient -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SECURE LEGION"
        android:fontFamily="@font/space_grotesk_bold"
        android:textSize="34sp"
        android:textColor="#888888"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/splashLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Status Text -->
    <TextView
        android:id="@+id/torStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connecting to Tor network..."
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:textColor="#999999"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/appTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Progress Bar (no container) -->
    <ProgressBar
        android:id="@+id/torProgressBar"
        style="@style/SecureLegionProgressBar"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:max="100"
        android:progress="0"
        android:indeterminate="false"
        app:layout_constraintTop_toBottomOf="@id/torStatusText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Configure Bridges Button (shown on connection failure) -->
    <TextView
        android:id="@+id/configureBridgesButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Configure Bridges"
        android:fontFamily="@font/space_grotesk_bold"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/neon_blue_button_bg"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/torProgressBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Retry Connection Button (shown after bridge configuration) -->
    <TextView
        android:id="@+id/retryConnectionButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Retry Connection"
        android:fontFamily="@font/space_grotesk_bold"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/lock_button_bg"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/configureBridgesButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Footer Text -->
    <TextView
        android:id="@+id/footerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secured by Tor Network"
        android:fontFamily="@font/poppins_medium"
        android:textSize="14sp"
        android:textColor="#999999"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
