<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <FrameLayout
            android:id="@+id/backButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back" />

        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Settings"
            android:textSize="24sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="@font/space_grotesk_bold"
            android:gravity="center" />

        <!-- Spacer for alignment -->
        <View
            android:layout_width="42dp"
            android:layout_height="42dp" />

    </LinearLayout>

    <!-- Settings List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="false"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- Duress PIN -->
            <LinearLayout
                android:id="@+id/duressPinItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_duress_pin" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Duress PIN"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/arrow_bg">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward" />

                </FrameLayout>

            </LinearLayout>

            <!-- Auto-Wipe Data -->
            <LinearLayout
                android:id="@+id/autoWipeItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_wipe_data" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Wipe on 10 failed logins"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/autoWipeSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    app:thumbTint="#333333"
                    app:trackTint="#888888" />

            </LinearLayout>

            <!-- Change Password -->
            <LinearLayout
                android:id="@+id/devicePasswordItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_lock_idle_lock"
                        app:tint="?attr/colorOnSurfaceVariant" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Change Password"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/arrow_bg">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward" />

                </FrameLayout>

            </LinearLayout>

            <!-- Biometric Unlock -->
            <LinearLayout
                android:id="@+id/biometricItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_fingerprint"
                        app:tint="?attr/colorOnSurfaceVariant" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Biometric Unlock"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/biometricSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    app:thumbTint="#333333"
                    app:trackTint="#888888" />

            </LinearLayout>

            <!-- Advanced Security -->
            <LinearLayout
                android:id="@+id/securityModeItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_advanced_security" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Advanced Security"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/arrow_bg">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward" />

                </FrameLayout>

            </LinearLayout>

            <!-- Two-Factor Auth -->
            <LinearLayout
                android:id="@+id/twoFactorItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_two_factor" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Two-Factor Auth (2FA)"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/arrow_bg">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward" />

                </FrameLayout>

            </LinearLayout>

            <!-- Subscription -->
            <LinearLayout
                android:id="@+id/subscriptionItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_subscription" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Subscription"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/arrow_bg">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward" />

                </FrameLayout>

            </LinearLayout>

            <!-- Backup -->
            <LinearLayout
                android:id="@+id/backupItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_backup"
                        app:tint="#4CAF50" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Backup &amp; Restore"
                        android:textSize="16sp"
                        android:textColor="#CCCCCC"
                        android:fontFamily="@font/poppins_medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Premium feature"
                        android:textSize="11sp"
                        android:textColor="#4CAF50" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/arrow_bg">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward" />

                </FrameLayout>

            </LinearLayout>

            <!-- Notification -->
            <LinearLayout
                android:id="@+id/notificationsItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_notification_bell" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Notification"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/arrow_bg">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward" />

                </FrameLayout>

            </LinearLayout>

            <!-- About -->
            <LinearLayout
                android:id="@+id/aboutItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_about_info" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="About"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/arrow_bg">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward" />

                </FrameLayout>

            </LinearLayout>

            <!-- Delete Account -->
            <LinearLayout
                android:id="@+id/wipeAccountButton"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_delete_account" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Delete Account"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/arrow_bg">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward" />

                </FrameLayout>

            </LinearLayout>

            <!-- Bridge -->
            <LinearLayout
                android:id="@+id/bridgeItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_bridge" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bridge"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/arrow_bg">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward" />

                </FrameLayout>

            </LinearLayout>

            <!-- Communication Mode (hidden until Meshtastic integration is ready) -->
            <LinearLayout
                android:id="@+id/communicationModeItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_mesh" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Communication Mode"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/arrow_bg">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward" />

                </FrameLayout>

            </LinearLayout>

            <!-- Tor Mode (VPN) -->
            <LinearLayout
                android:id="@+id/torModeItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_onion"
                        app:tint="?attr/colorOnSurfaceVariant" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tor VPN Mode"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/torModeSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    app:thumbTint="#333333"
                    app:trackTint="#888888" />

            </LinearLayout>

            <!-- Privacy Section Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy"
                android:textSize="14sp"
                android:textColor="#888888"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp" />

            <!-- Read Receipts Toggle -->
            <LinearLayout
                android:id="@+id/readReceiptItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_read_receipts" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Send Read Receipts"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/readReceiptSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:thumbTint="#333333"
                    app:trackTint="#888888" />

            </LinearLayout>

            <!-- Last Seen Toggle -->
            <LinearLayout
                android:id="@+id/lastSeenItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_last_seen" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Show Last Seen"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/lastSeenSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:thumbTint="#333333"
                    app:trackTint="#888888" />

            </LinearLayout>

            <!-- Developer -->
            <LinearLayout
                android:id="@+id/developerItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_manage"
                        app:tint="?attr/colorOnSurfaceVariant" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Developer"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/arrow_bg">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
