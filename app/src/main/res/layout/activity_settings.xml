<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <FrameLayout
            android:id="@+id/backButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back" />

        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Settings"
            android:textSize="24sp"
            android:textColor="#999999"
            android:fontFamily="@font/space_grotesk_bold"
            android:gravity="center" />

        <!-- Spacer for alignment -->
        <View
            android:layout_width="42dp"
            android:layout_height="42dp" />

    </LinearLayout>

    <!-- Settings List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="false"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- Duress PIN -->
            <LinearLayout
                android:id="@+id/duressPinItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_duress_pin" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Duress PIN"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/arrow_bg">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward" />

                </FrameLayout>

            </LinearLayout>

            <!-- Auto-Wipe Data -->
            <LinearLayout
                android:id="@+id/autoWipeItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_wipe_data" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Wipe on 10 failed logins"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/autoWipeSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    app:thumbTint="#333333"
                    app:trackTint="#888888" />

            </LinearLayout>

            <!-- Change Password -->
            <LinearLayout
                android:id="@+id/devicePasswordItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_lock_idle_lock"
                        app:tint="#888888" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Change Password"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/arrow_bg">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward" />

                </FrameLayout>

            </LinearLayout>

            <!-- Biometric Unlock -->
            <LinearLayout
                android:id="@+id/biometricItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_fingerprint"
                        app:tint="#888888" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Biometric Unlock"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/biometricSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    app:thumbTint="#333333"
                    app:trackTint="#888888" />

            </LinearLayout>

            <!-- Advance Security -->
            <LinearLayout
                android:id="@+id/securityModeItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_advanced_security" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Advance Security"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/arrow_bg">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward" />

                </FrameLayout>

            </LinearLayout>

            <!-- Notification -->
            <LinearLayout
                android:id="@+id/notificationsItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_notification_bell" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Notification"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/arrow_bg">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward" />

                </FrameLayout>

            </LinearLayout>

            <!-- About -->
            <LinearLayout
                android:id="@+id/aboutItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_about_info" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="About"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/arrow_bg">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward" />

                </FrameLayout>

            </LinearLayout>

            <!-- Delete Account -->
            <LinearLayout
                android:id="@+id/wipeAccountButton"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_delete_account" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Delete Account"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/arrow_bg">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward" />

                </FrameLayout>

            </LinearLayout>

            <!-- Bridge -->
            <LinearLayout
                android:id="@+id/bridgeItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_bridge" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bridge"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/arrow_bg">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward" />

                </FrameLayout>

            </LinearLayout>

            <!-- Communication Mode -->
            <LinearLayout
                android:id="@+id/communicationModeItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_mesh" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Communication Mode"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/arrow_bg">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward" />

                </FrameLayout>

            </LinearLayout>

            <!-- Tor Mode (VPN) -->
            <LinearLayout
                android:id="@+id/torModeItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_onion"
                        app:tint="#888888" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tor VPN Mode"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/torModeSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    app:thumbTint="#333333"
                    app:trackTint="#888888" />

            </LinearLayout>

            <!-- Developer -->
            <LinearLayout
                android:id="@+id/developerItem"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_manage"
                        app:tint="#888888" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Developer"
                    android:textSize="16sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_medium" />

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/arrow_bg">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:background="#0A0A0A"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Messages Nav Item -->
        <LinearLayout
            android:id="@+id/navMessages"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_item_ripple"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/sym_action_chat"
                app:tint="@color/text_gray"
                android:layout_marginBottom="4dp"
                android:contentDescription="Messages" />

            <TextView
                android:id="@+id/navMessagesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Messages"
                android:textSize="11sp"
                android:textColor="@color/text_gray"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

        <!-- Wallet Nav Item -->
        <LinearLayout
            android:id="@+id/navWallet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_item_ripple"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_wallet"
                android:layout_marginBottom="4dp"
                app:tint="@color/text_gray"
                android:contentDescription="Wallet" />

            <TextView
                android:id="@+id/navWalletLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet"
                android:textSize="11sp"
                android:textColor="@color/text_gray"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

        <!-- Add Friend Nav Item -->
        <LinearLayout
            android:id="@+id/navAddFriend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_item_ripple"
            android:clickable="true"
            android:focusable="true">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_add_friend"
                    app:tint="@color/text_gray"
                    android:contentDescription="Add Friend" />

                <!-- Badge for pending friend requests -->
                <TextView
                    android:id="@+id/friendRequestBadge"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="-4dp"
                    android:layout_marginEnd="-4dp"
                    android:background="@drawable/badge_bg"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white"
                    android:visibility="gone" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Friend"
                android:textSize="11sp"
                android:textColor="@color/text_gray"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

        <!-- Phone Nav Item -->
        <LinearLayout
            android:id="@+id/navPhone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_item_ripple"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_call"
                android:layout_marginBottom="4dp"
                app:tint="@color/text_gray"
                android:contentDescription="Phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="11sp"
                android:textColor="@color/text_gray"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
