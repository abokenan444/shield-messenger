<?xml version="1.0" encoding="utf-8"?>
<!-- Create Wallet Screen -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/header_bg">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:fitsSystemWindows="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:gravity="center_vertical"
        android:background="@color/header_bg">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/text_white"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Create New Wallet"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:layout_marginStart="12dp" />

    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/card_bg"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/border_color"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_wallet"
                        app:tint="@color/primary_blue"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="12dp"
                        android:contentDescription="Wallet" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create a new Solana wallet"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_white"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="This will generate a new wallet address with its own private key. You can use multiple wallets to organize your funds."
                        android:textSize="14sp"
                        android:textColor="@color/text_gray"
                        android:gravity="center"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Wallet Name Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet Name"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_white"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/walletNameInput"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/input_field_bg"
                android:padding="16dp"
                android:hint="Enter wallet name"
                android:textColor="@color/text_white"
                android:textColorHint="@color/text_gray"
                android:textSize="16sp"
                android:maxLines="1"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:layout_marginBottom="24dp" />

            <!-- Warning Box -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1A1E90FF"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#331E90FF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_shield"
                        app:tint="@color/primary_blue"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Info" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Make sure to securely backup your wallet's seed phrase after creation. You can export it from wallet settings."
                        android:textSize="13sp"
                        android:textColor="@color/text_white"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Create Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/header_bg">

        <TextView
            android:id="@+id/createWalletButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Create Wallet"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:gravity="center"
            android:background="@drawable/primary_button_bg"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</LinearLayout>
