<?xml version="1.0" encoding="utf-8"?>
<!-- Create Wallet Screen -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:fitsSystemWindows="true">

        <!-- Back Button -->
        <FrameLayout
            android:id="@+id/backButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back" />

        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Create Wallet"
            android:textSize="28sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="@font/space_grotesk_bold"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Spacer for alignment -->
        <View
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp" />

    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="20dp"
            android:paddingBottom="24dp">

            <!-- Wallet Name Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet Name"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/walletNameInput"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/settings_box_bg"
                android:padding="16dp"
                android:hint="Enter wallet name"
                android:textColor="?attr/colorOnSurface"
                android:textColorHint="#555555"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16sp"
                android:maxLines="1"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:layout_marginBottom="32dp" />

            <!-- Wallet Type Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet Type"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginBottom="12dp" />

            <!-- Solana Option -->
            <LinearLayout
                android:id="@+id/solanaOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/settings_icon_bg">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_solana"
                        android:contentDescription="Solana" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Solana"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="@font/poppins_semibold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SOL blockchain wallet"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:fontFamily="@font/poppins_regular" />

                </LinearLayout>

                <View
                    android:id="@+id/solanaCheckbox"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/custom_checkbox" />

            </LinearLayout>

            <!-- Zcash Option -->
            <LinearLayout
                android:id="@+id/zcashOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:padding="16dp"
                android:layout_marginBottom="32dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/settings_icon_bg">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_zcash"
                        android:contentDescription="Zcash" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zcash"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="@font/poppins_semibold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ZEC blockchain wallet"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:fontFamily="@font/poppins_regular" />

                </LinearLayout>

                <View
                    android:id="@+id/zcashCheckbox"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/custom_checkbox" />

            </LinearLayout>

            <!-- Create Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/createWalletButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Create Wallet"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_semibold"
                android:textAllCaps="false"
                android:background="@drawable/swap_button_bg"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
