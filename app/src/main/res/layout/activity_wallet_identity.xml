<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <FrameLayout
            android:id="@+id/backButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back" />

        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Profile"
            android:textSize="24sp"
            android:textColor="@color/text_white"
            android:fontFamily="@font/space_grotesk_bold"
            android:gravity="center" />

        <!-- Spacer for alignment -->
        <View
            android:layout_width="42dp"
            android:layout_height="42dp" />

    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp"
            android:gravity="center_horizontal">

            <!-- Profile Photo -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/settings_icon_bg">

                <com.securelegion.views.AvatarView
                    android:id="@+id/profilePhotoAvatar"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:contentDescription="Profile Photo" />

                <!-- Edit Icon -->
                <FrameLayout
                    android:id="@+id/editProfilePhotoButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/settings_icon_bg"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_edit"
                        app:tint="#888888" />

                </FrameLayout>

            </FrameLayout>

            <!-- Username -->
            <TextView
                android:id="@+id/usernameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@WIZARD"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/space_grotesk_bold"
                android:layout_marginBottom="32dp" />

            <!-- Friend Request Address Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Friend Request Address"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#8C8C8C"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/lock_password_input_bg"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/contactCardCid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="#8C8C8C"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:maxLines="1" />

                <FrameLayout
                    android:id="@+id/copyCidButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/settings_icon_bg"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_share"
                        app:tint="#888888" />

                </FrameLayout>

            </LinearLayout>

            <!-- Contact PIN Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact PIN"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#8C8C8C"
                android:layout_marginBottom="8dp" />

            <!-- PIN Input Boxes in phone format: XXX-XXX-XXXX -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <!-- First group: 3 digits -->
                <TextView
                    android:id="@+id/pinDigit1"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/pin_box_bg"
                    android:gravity="center"
                    android:textColor="#8C8C8C"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium" />

                <TextView
                    android:id="@+id/pinDigit2"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/pin_box_bg"
                    android:gravity="center"
                    android:textColor="#8C8C8C"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium" />

                <TextView
                    android:id="@+id/pinDigit3"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/pin_box_bg"
                    android:gravity="center"
                    android:textColor="#8C8C8C"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium" />

                <!-- Dash separator -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="-"
                    android:textColor="#666666"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp" />

                <!-- Second group: 3 digits -->
                <TextView
                    android:id="@+id/pinDigit4"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/pin_box_bg"
                    android:gravity="center"
                    android:textColor="#8C8C8C"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium" />

                <TextView
                    android:id="@+id/pinDigit5"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/pin_box_bg"
                    android:gravity="center"
                    android:textColor="#8C8C8C"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium" />

                <TextView
                    android:id="@+id/pinDigit6"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/pin_box_bg"
                    android:gravity="center"
                    android:textColor="#8C8C8C"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium" />

                <!-- Dash separator -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="-"
                    android:textColor="#666666"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp" />

                <!-- Third group: 4 digits -->
                <TextView
                    android:id="@+id/pinDigit7"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/pin_box_bg"
                    android:gravity="center"
                    android:textColor="#8C8C8C"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium" />

                <TextView
                    android:id="@+id/pinDigit8"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/pin_box_bg"
                    android:gravity="center"
                    android:textColor="#8C8C8C"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium" />

                <TextView
                    android:id="@+id/pinDigit9"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/pin_box_bg"
                    android:gravity="center"
                    android:textColor="#8C8C8C"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium" />

                <TextView
                    android:id="@+id/pinDigit10"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/pin_box_bg"
                    android:gravity="center"
                    android:textColor="#8C8C8C"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium" />

                <!-- Copy button -->
                <FrameLayout
                    android:id="@+id/copyPinButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/settings_icon_bg"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_share"
                        app:tint="#888888" />

                </FrameLayout>

            </LinearLayout>

            <!-- Identity QR Code Button -->
            <LinearLayout
                android:id="@+id/identityQrCodeButton"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="24dp">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_qr_code"
                        app:tint="#888888" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Identity QR Code"
                    android:textSize="16sp"
                    android:textColor="#8C8C8C"
                    android:fontFamily="@font/poppins_medium" />

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/arrow_bg">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward" />

                </FrameLayout>

            </LinearLayout>

            <!-- New Identity Button (future feature - commented out)
            <LinearLayout
                android:id="@+id/updateUsernameButton"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_box_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginTop="12dp">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_person"
                        app:tint="#888888" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="New Identity"
                    android:textSize="16sp"
                    android:textColor="#8C8C8C"
                    android:fontFamily="@font/poppins_medium" />

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/arrow_bg">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_forward" />

                </FrameLayout>

            </LinearLayout>
            -->

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:background="#0A0A0A"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Messages Nav Item -->
        <LinearLayout
            android:id="@+id/navMessages"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_item_ripple"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/sym_action_chat"
                app:tint="@color/text_gray"
                android:layout_marginBottom="4dp"
                android:contentDescription="Messages" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Messages"
                android:textSize="11sp"
                android:textColor="@color/text_gray"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

        <!-- Wallet Nav Item -->
        <LinearLayout
            android:id="@+id/navWallet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_item_ripple"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_wallet"
                android:layout_marginBottom="4dp"
                app:tint="@color/text_gray"
                android:contentDescription="Wallet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet"
                android:textSize="11sp"
                android:textColor="@color/text_gray"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

        <!-- Add Friend Nav Item -->
        <LinearLayout
            android:id="@+id/navAddFriend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_item_ripple"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add_friend"
                app:tint="@color/text_gray"
                android:layout_marginBottom="4dp"
                android:contentDescription="Add Friend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Friend"
                android:textSize="11sp"
                android:textColor="@color/text_gray"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

        <!-- Phone Nav Item -->
        <LinearLayout
            android:id="@+id/navPhone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_item_ripple"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_call"
                android:layout_marginBottom="4dp"
                app:tint="@color/text_gray"
                android:contentDescription="Phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="11sp"
                android:textColor="@color/text_gray"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
