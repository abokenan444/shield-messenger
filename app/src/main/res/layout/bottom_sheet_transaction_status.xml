<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_bg"
    android:paddingTop="8dp"
    android:paddingBottom="32dp">

    <!-- Handle Bar -->
    <View
        android:layout_width="60dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:background="#4A4A4A"
        android:layout_marginBottom="24dp" />

    <!-- Status Icon / Spinner -->
    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp">

        <!-- Background Circle -->
        <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/circle_bg" />

        <!-- Loading Spinner (shown during transaction) -->
        <ProgressBar
            android:id="@+id/txStatusSpinner"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:indeterminateTint="#6BA4FF"
            android:visibility="visible" />

        <!-- Success Icon (shown on success) -->
        <ImageView
            android:id="@+id/txStatusSuccessIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_check"
            app:tint="#4CAF50"
            android:visibility="gone"
            android:contentDescription="Success" />

        <!-- Error Icon (shown on failure) -->
        <ImageView
            android:id="@+id/txStatusErrorIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_close_x"
            app:tint="#FF5252"
            android:visibility="gone"
            android:contentDescription="Error" />

    </FrameLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/txStatusTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sending_transaction"
        android:textSize="24sp"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="@font/space_grotesk_bold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Status Message -->
    <TextView
        android:id="@+id/txStatusMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/preparing_transaction"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp" />

    <!-- Transaction Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/settings_box_bg"
        android:padding="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp">

        <!-- Amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/amount"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/txStatusAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/n_05_sol"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

        <!-- USD Value -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/value"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/txStatusUsdValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/n_7500_usd"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

        <!-- From -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/from"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/txStatusFromWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wallet_1"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

        <!-- To -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/to"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/txStatusToAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/n_0x12345678"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

        <!-- Network -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/network"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/txStatusNetwork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/solana"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

        <!-- Network Fee -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/network_fee"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/txStatusNetworkFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/n_0000005_sol_2"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

    </LinearLayout>

    <!-- Transaction Hash (shown on success) -->
    <LinearLayout
        android:id="@+id/txHashContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/settings_box_bg"
        android:padding="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/txHashText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/abc123"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="monospace"
            android:layout_marginEnd="12dp" />

        <ImageView
            android:id="@+id/copyTxHashIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_copy"
            app:tint="?attr/colorOnSurfaceVariant"
            android:contentDescription="Copy transaction hash" />

    </LinearLayout>

    <!-- Error Message (shown on failure) -->
    <TextView
        android:id="@+id/txErrorMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/transaction_failed_insufficient_funds"
        android:textSize="14sp"
        android:textColor="#FF5252"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:visibility="gone" />

    <!-- Close Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/txStatusCloseButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/swap_button_bg"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/close"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnSurface"
        android:textSize="16sp"
        android:enabled="false"
        android:alpha="0.5" />

</LinearLayout>
