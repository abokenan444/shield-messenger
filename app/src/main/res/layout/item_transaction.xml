<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/settings_item_bg"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true">

    <!-- SOL Logo -->
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_solana"
        android:layout_marginEnd="12dp"
        android:contentDescription="Solana" />

    <!-- Transaction Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Sent/Received -->
        <TextView
            android:id="@+id/transactionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sent"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface" />

        <!-- Address (first 4 ... last 4) -->
        <TextView
            android:id="@+id/transactionAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/abc1xyz9"
            android:textSize="13sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Amount -->
    <TextView
        android:id="@+id/transactionAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/n_00002_sol"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface"
        android:gravity="end" />

</LinearLayout>
