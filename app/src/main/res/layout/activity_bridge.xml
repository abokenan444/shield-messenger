<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <FrameLayout
            android:id="@+id/backButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back" />

        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tor_bridges"
            android:textSize="24sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="@font/space_grotesk_bold"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Settings Button (invisible for balance) -->
        <FrameLayout
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:visibility="invisible" />

    </LinearLayout>

    <!-- Bridge Options -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="false"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/saveButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bridges_help_you_connect_to_tor_in_censo"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_regular"
                android:lineSpacingMultiplier="1.3"
                android:layout_marginBottom="20dp" />

            <!-- Radio Group for Bridge Selection -->
            <RadioGroup
                android:id="@+id/bridgeRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- None/Disabled -->
                <RadioButton
                    android:id="@+id/bridgeNone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/none_default"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="16dp"
                    android:checked="true"
                    android:buttonTint="#FFFFFF" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/connect_directly_to_tor_without_bridges"
                    android:textSize="13sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="56dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp" />

                <!-- Snowflake -->
                <RadioButton
                    android:id="@+id/bridgeSnowflake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/snowflake"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="16dp"
                    android:buttonTint="#FFFFFF" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/uses_temporary_proxies_from_volunteers_r"
                    android:textSize="13sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="56dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp" />

                <!-- obfs4 -->
                <RadioButton
                    android:id="@+id/bridgeObfs4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/obfs4"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="16dp"
                    android:buttonTint="#FFFFFF" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/obfuscates_traffic_to_look_like_random_d"
                    android:textSize="13sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="56dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp" />

                <!-- meek -->
                <RadioButton
                    android:id="@+id/bridgeMeek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/meekazure"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="16dp"
                    android:buttonTint="#FFFFFF" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/routes_through_microsoft_azure_slower_bu"
                    android:textSize="13sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="56dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp" />

                <!-- WebTunnel -->
                <RadioButton
                    android:id="@+id/bridgeWebtunnel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/webtunnel"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="16dp"
                    android:buttonTint="#FFFFFF" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/disguises_tor_as_normal_https_web_traffi"
                    android:textSize="13sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="56dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp" />

                <!-- Custom -->
                <RadioButton
                    android:id="@+id/bridgeCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/custom_bridge"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="16dp"
                    android:buttonTint="#FFFFFF" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_your_own_bridge_address"
                    android:textSize="13sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="56dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp" />

            </RadioGroup>

            <!-- Custom Bridge Input (shown when Custom is selected) -->
            <EditText
                android:id="@+id/customBridgeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_paste_bridge_address_here"
                android:textColorHint="#666666"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/lock_password_input_bg"
                android:padding="16dp"
                android:layout_marginStart="56dp"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                android:inputType="textMultiLine"
                android:minLines="3" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/colorSurfaceContainerHighest"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp" />

            <!-- Developer Options Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/developer_options"
                android:textSize="11sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_medium"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:layout_marginBottom="16dp" />

            <!-- Testnet Mode Switch -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@drawable/settings_item_bg">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/testnet_mode"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="@font/poppins_medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/use_testnet_for_zcash_testnetzecrocks_an"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:fontFamily="@font/poppins_regular"
                        android:lineSpacingMultiplier="1.3"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/testnetSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    app:thumbTint="#FFFFFF"
                    app:trackTint="#444444" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Save Button -->
    <FrameLayout
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/settings_box_bg"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/save"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="@font/space_grotesk_bold"
            android:textStyle="bold" />

    </FrameLayout>

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
