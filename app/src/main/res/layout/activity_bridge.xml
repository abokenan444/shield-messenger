<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <FrameLayout
            android:id="@+id/backButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back" />

        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tor Bridges"
            android:textSize="22sp"
            android:textColor="#CCCCCC"
            android:fontFamily="@font/space_grotesk_bold"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Settings Button (invisible for balance) -->
        <FrameLayout
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:visibility="invisible" />

    </LinearLayout>

    <!-- Bridge Options -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="false"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/saveButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bridges help you connect to Tor in censored regions where Tor is blocked. Select a bridge type below."
                android:textSize="14sp"
                android:textColor="#888888"
                android:fontFamily="@font/poppins_regular"
                android:lineSpacingMultiplier="1.3"
                android:layout_marginBottom="20dp" />

            <!-- Radio Group for Bridge Selection -->
            <RadioGroup
                android:id="@+id/bridgeRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- None/Disabled -->
                <RadioButton
                    android:id="@+id/bridgeNone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="None (Default)"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="16dp"
                    android:checked="true"
                    android:buttonTint="#4A90E2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connect directly to Tor without bridges"
                    android:textSize="13sp"
                    android:textColor="#888888"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="56dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp" />

                <!-- Snowflake -->
                <RadioButton
                    android:id="@+id/bridgeSnowflake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Snowflake"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="16dp"
                    android:buttonTint="#4A90E2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Uses temporary proxies from volunteers (recommended for most censored regions)"
                    android:textSize="13sp"
                    android:textColor="#888888"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="56dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp" />

                <!-- obfs4 -->
                <RadioButton
                    android:id="@+id/bridgeObfs4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="obfs4"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="16dp"
                    android:buttonTint="#4A90E2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Obfuscates traffic to look like random data"
                    android:textSize="13sp"
                    android:textColor="#888888"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="56dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp" />

                <!-- meek -->
                <RadioButton
                    android:id="@+id/bridgeMeek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="meek-azure"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="16dp"
                    android:buttonTint="#4A90E2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Routes through Microsoft Azure (slower but harder to block)"
                    android:textSize="13sp"
                    android:textColor="#888888"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="56dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp" />

                <!-- Custom -->
                <RadioButton
                    android:id="@+id/bridgeCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Custom Bridge"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppins_medium"
                    android:padding="16dp"
                    android:buttonTint="#4A90E2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter your own bridge address"
                    android:textSize="13sp"
                    android:textColor="#888888"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="56dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp" />

            </RadioGroup>

            <!-- Custom Bridge Input (shown when Custom is selected) -->
            <EditText
                android:id="@+id/customBridgeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Paste bridge address here..."
                android:textColorHint="#666666"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/lock_password_input_bg"
                android:padding="16dp"
                android:layout_marginStart="56dp"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                android:inputType="textMultiLine"
                android:minLines="3" />

        </LinearLayout>

    </ScrollView>

    <!-- Save Button -->
    <FrameLayout
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/neon_blue_button_bg"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SAVE"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/space_grotesk_bold"
            android:textStyle="bold" />

    </FrameLayout>

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
