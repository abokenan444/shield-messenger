<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/wallet_token_bg"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:gravity="center_vertical"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true">

    <!-- Call Type Icon -->
    <ImageView
        android:id="@+id/callTypeIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_call"
        app:tint="#4CAF50"
        android:contentDescription="Call type" />

    <!-- Call Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <!-- Contact Name -->
        <TextView
            android:id="@+id/contactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alice"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="@font/poppins_medium" />

        <!-- Call Details -->
        <TextView
            android:id="@+id/callInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/incoming_yesterday_1245"
            android:textSize="13sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Re-call Button -->
    <ImageView
        android:id="@+id/reCallButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_call"
        app:tint="?attr/colorOnSurfaceVariant"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Call again" />

</LinearLayout>
