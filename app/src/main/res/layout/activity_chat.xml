<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/chatHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/header_bg"
        android:fitsSystemWindows="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="â€¹"
            android:textSize="32sp"
            android:textColor="@color/text_white"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/chatName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="@nighthawk"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:gravity="center" />

        <ImageView
            android:id="@+id/deleteButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_delete"
            android:padding="8dp"
            app:tint="@color/text_white"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete messages" />

    </LinearLayout>

    <!-- Messages Container -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000000"
        android:padding="16dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/chatHeader"
        app:layout_constraintBottom_toTopOf="@id/messageInputContainer" />

    <!-- Message Input Container -->
    <FrameLayout
        android:id="@+id/messageInputContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Normal text input mode -->
        <LinearLayout
            android:id="@+id/textInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="visible">

            <EditText
                android:id="@+id/messageInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/message_input_bg"
                android:hint="Message..."
                android:textColorHint="@color/text_gray"
                android:textColor="@color/text_white"
                android:textSize="16sp"
                android:padding="14dp"
                android:maxLines="4" />

            <ImageView
                android:id="@+id/sendButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_mic"
                android:background="@drawable/metallic_button_bg"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:elevation="6dp"
                app:tint="@color/text_white"
                android:contentDescription="Voice message or send" />

        </LinearLayout>

        <!-- Voice recording mode -->
        <LinearLayout
            android:id="@+id/voiceRecordingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/message_input_bg"
            android:padding="14dp"
            android:visibility="gone">

            <!-- Cancel button -->
            <ImageView
                android:id="@+id/cancelRecordingButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                app:tint="#FF5555"
                android:contentDescription="Cancel recording" />

            <!-- Recording indicator and timer -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:gravity="center">

                <!-- Recording dot -->
                <View
                    android:id="@+id/recordingDot"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/online_indicator"
                    android:backgroundTint="#FF5555" />

                <TextView
                    android:id="@+id/recordingTimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="0:00"
                    android:textColor="@color/text_white"
                    android:textSize="16sp"
                    android:fontFamily="monospace" />

            </LinearLayout>

            <!-- Send button -->
            <ImageView
                android:id="@+id/sendVoiceButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_send"
                android:background="@drawable/send_button_bg"
                android:padding="8dp"
                app:tint="@color/text_white"
                android:contentDescription="Send voice message" />

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
