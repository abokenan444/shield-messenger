<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/chatHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:fitsSystemWindows="true"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <FrameLayout
            android:id="@+id/backButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/glass_circle_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back" />

        </FrameLayout>

        <!-- Contact Avatar -->
        <com.shieldmessenger.views.AvatarView
            android:id="@+id/contactAvatar"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="12dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/nav_item_ripple"
            android:contentDescription="Contact Photo" />

        <!-- Chat Name (clickable — opens contact profile) -->
        <TextView
            android:id="@+id/chatName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="@Wizard"
            android:textSize="20sp"
            android:textColor="@color/lock_title_gray"
            android:fontFamily="@font/space_grotesk_bold"
            android:gravity="start"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground" />

        <!-- Video Call Button -->
        <FrameLayout
            android:id="@+id/videoCallButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/glass_circle_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_videocam"
                app:tint="?attr/colorOnSurfaceVariant"
                android:contentDescription="Video Call" />

        </FrameLayout>

        <!-- Call Button -->
        <FrameLayout
            android:id="@+id/callButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/glass_circle_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_call"
                app:tint="?attr/colorOnSurfaceVariant"
                android:contentDescription="Voice Call" />

        </FrameLayout>

    </LinearLayout>

    <!-- Messages Container - extends behind header and floating input bar for glass effect -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messagesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/colorSurface"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="88dp"
        android:paddingBottom="88dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Attachment Panel (Gallery/File/Pay/Location — inline, replaces keyboard) -->
    <include
        layout="@layout/bottom_sheet_attachment_picker"
        android:id="@+id/attachmentPanel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Media Keyboard Panel (emoji/sticker/GIF — replaces keyboard) -->
    <com.shieldmessenger.views.MediaKeyboardView
        android:id="@+id/mediaKeyboardPanel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Barrier above whichever bottom panel is visible -->
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/bottomPanelBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="mediaKeyboardPanel,attachmentPanel" />

    <!-- Message Input Container -->
    <LinearLayout
        android:id="@+id/messageInputContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@id/bottomPanelBarrier"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Input pill area (text input and voice recording overlap here) -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!-- Normal text input mode -->
            <LinearLayout
                android:id="@+id/textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/chat_input_pill_bg"
                android:paddingStart="4dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:visibility="visible">

                <!-- Plus Button inside pill -->
                <FrameLayout
                    android:id="@+id/plusButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_add"
                        app:tint="?attr/colorOnSurfaceVariant"
                        android:contentDescription="Add attachment" />

                </FrameLayout>

                <!-- Message Input -->
                <EditText
                    android:id="@+id/messageInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/hint_type_a_message"
                    android:textColorHint="#666666"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:maxLines="4"
                    android:saveEnabled="false"
                    android:inputType="textCapSentences|textMultiLine" />

                <!-- Emoji Button inside pill (opens emoji/gif/sticker panel) -->
                <FrameLayout
                    android:id="@+id/emojiButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/emojiButtonIcon"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_emoji"
                        app:tint="?attr/colorOnSurfaceVariant"
                        android:contentDescription="Emoji picker" />

                </FrameLayout>

            </LinearLayout>

            <!-- Voice recording mode -->
            <LinearLayout
                android:id="@+id/voiceRecordingLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/chat_input_pill_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:visibility="gone">

                <!-- Cancel button -->
                <ImageView
                    android:id="@+id/cancelRecordingButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_delete"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="6dp"
                    app:tint="#FF5555"
                    android:contentDescription="Cancel recording" />

                <!-- Recording indicator and timer -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:gravity="center">

                    <!-- Recording dot -->
                    <View
                        android:id="@+id/recordingDot"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/online_indicator"
                        android:backgroundTint="#FF5555" />

                    <TextView
                        android:id="@+id/recordingTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/n_000"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="15sp"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>

                <!-- Send button -->
                <ImageView
                    android:id="@+id/sendVoiceButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_send"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="6dp"
                    app:tint="#4A90E2"
                    android:contentDescription="Send voice message" />

            </LinearLayout>

        </FrameLayout>

        <!-- Mic/Send Circle Button (outside the pill) -->
        <FrameLayout
            android:id="@+id/sendButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/chat_send_circle_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/sendButtonIcon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_mic"
                app:tint="?attr/colorOnSurfaceVariant"
                android:contentDescription="Voice message or send" />

        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
