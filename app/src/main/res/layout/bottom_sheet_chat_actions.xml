<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/wallet_dropdown_bg"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="20dp"
    android:paddingBottom="32dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:textSize="18sp"
        android:textColor="#CCCCCC"
        android:fontFamily="@font/space_grotesk_bold"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- Send Money -->
    <LinearLayout
        android:id="@+id/sendMoneyOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/wallet_token_bg"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/top_icon_bg">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_wallet"
                android:tint="#888888"
                android:contentDescription="Wallet" />

        </FrameLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Send Money"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="16dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_forward"
            android:tint="#666666"
            android:contentDescription="Arrow" />

    </LinearLayout>

    <!-- Request Money -->
    <LinearLayout
        android:id="@+id/requestMoneyOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/wallet_token_bg"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/top_icon_bg">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_wallet"
                android:rotation="180"
                android:tint="#888888"
                android:contentDescription="Request" />

        </FrameLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Request Money"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="16dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_forward"
            android:tint="#666666"
            android:contentDescription="Arrow" />

    </LinearLayout>

    <!-- Send File -->
    <LinearLayout
        android:id="@+id/sendFileOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/wallet_token_bg"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/top_icon_bg">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_save"
                android:tint="#888888"
                android:contentDescription="File" />

        </FrameLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Send File"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="16dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_forward"
            android:tint="#666666"
            android:contentDescription="Arrow" />

    </LinearLayout>

    <!-- Send Image -->
    <LinearLayout
        android:id="@+id/sendImageOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/wallet_token_bg"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/top_icon_bg">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_gallery"
                android:tint="#888888"
                android:contentDescription="Image" />

        </FrameLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Send Image"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="16dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_forward"
            android:tint="#666666"
            android:contentDescription="Arrow" />

    </LinearLayout>

    <!-- Send Video -->
    <LinearLayout
        android:id="@+id/sendVideoOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/wallet_token_bg"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/top_icon_bg">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_media_play"
                android:tint="#888888"
                android:contentDescription="Video" />

        </FrameLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Send Video"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="16dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_forward"
            android:tint="#666666"
            android:contentDescription="Arrow" />

    </LinearLayout>

</LinearLayout>
