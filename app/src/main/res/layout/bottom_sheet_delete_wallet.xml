<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_bg"
    android:paddingTop="8dp"
    android:paddingBottom="32dp">

    <!-- Handle Bar -->
    <View
        android:layout_width="60dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:background="#4A4A4A"
        android:layout_marginBottom="20dp" />

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Wallet"
        android:textSize="24sp"
        android:textColor="@color/text_white"
        android:fontFamily="@font/space_grotesk_bold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Wallet Name -->
    <TextView
        android:id="@+id/walletNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wallet 1"
        android:textSize="18sp"
        android:textColor="@color/text_white"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Wallet Address -->
    <TextView
        android:id="@+id/walletAddressText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADm9P...2eoLX5"
        android:textSize="12sp"
        android:textColor="#888888"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Warning Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/settings_box_bg"
        android:padding="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This will permanently delete this wallet from your device."
            android:textSize="14sp"
            android:textColor="#CCCCCC"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingMultiplier="1.3" />

    </LinearLayout>

    <!-- Confirmation Checkbox -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:paddingVertical="8dp">

        <CheckBox
            android:id="@+id/confirmCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#888888"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="I understand this action is permanent"
            android:textSize="14sp"
            android:textColor="#AAAAAA"
            android:fontFamily="@font/poppins_regular" />

    </LinearLayout>

    <!-- Delete Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/deleteButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/delete_button_bg"
        android:fontFamily="@font/poppins_semibold"
        android:text="Delete Wallet"
        android:textAllCaps="false"
        android:textColor="@color/text_white"
        android:textSize="16sp"
        android:alpha="0.5"
        android:enabled="false" />

    <!-- Cancel Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/poppins_medium"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="#888888"
        android:textSize="16sp" />

</LinearLayout>
