<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <FrameLayout
            android:id="@+id/backButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back" />

        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tor_health"
            android:textSize="24sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="@font/space_grotesk_bold"
            android:gravity="center" />

        <!-- Spacer for alignment -->
        <View
            android:layout_width="42dp"
            android:layout_height="42dp" />

    </LinearLayout>

    <!-- Health Indicators -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="false"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/realtime_tor_health_monitoring_updates_e"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_regular"
                android:lineSpacingMultiplier="1.3"
                android:layout_marginBottom="20dp" />

            <!-- Main Tor Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_box_bg"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_tor"
                    android:textSize="18sp"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginBottom="12dp" />

                <!-- Status Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <View
                        android:id="@+id/mainTorStatusIndicator"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/status_offline_indicator" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status"
                        android:textSize="14sp"
                        android:textColor="#AAAAAA"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/mainTorStatusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/checking"
                        android:textSize="14sp"
                        android:textColor="#CCCCCC"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>

                <!-- Circuits Row -->
                <TextView
                    android:id="@+id/mainCircuitsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/circuits"
                    android:textSize="14sp"
                    android:textColor="#AAAAAA"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginBottom="4dp" />

                <!-- Bootstrap Row -->
                <TextView
                    android:id="@+id/mainBootstrapText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bootstrap"
                    android:textSize="14sp"
                    android:textColor="#AAAAAA"
                    android:fontFamily="@font/poppins_regular" />

            </LinearLayout>

            <!-- Voice Tor Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_box_bg"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/voice_tor"
                    android:textSize="18sp"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginBottom="12dp" />

                <!-- Status Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/voiceTorStatusIndicator"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/status_offline_indicator" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status"
                        android:textSize="14sp"
                        android:textColor="#AAAAAA"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/voiceTorStatusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/not_monitored"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>

            </LinearLayout>

            <!-- Network Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_box_bg"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/network"
                    android:textSize="18sp"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginBottom="12dp" />

                <!-- Status Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/networkStatusIndicator"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/status_offline_indicator" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status"
                        android:textSize="14sp"
                        android:textColor="#AAAAAA"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/networkStatusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/checking"
                        android:textSize="14sp"
                        android:textColor="#CCCCCC"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
