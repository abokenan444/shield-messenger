<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- Timestamp Header -->
    <TextView
        android:id="@+id/timestampHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Today"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="12sp"
        android:paddingBottom="8dp"
        android:visibility="gone" />

    <!-- Payment Card (aligned right for sent) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingEnd="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/messageBubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#1A1A1A">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp"
                android:minWidth="160dp">

                <!-- Request label -->
                <TextView
                    android:id="@+id/paymentLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Requested"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="11sp" />

                <!-- USD Amount big -->
                <TextView
                    android:id="@+id/paymentAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="$0.75"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <!-- Crypto amount smaller below -->
                <TextView
                    android:id="@+id/paymentAmountUsd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.005 SOL"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Status row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/statusDot"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:background="@drawable/status_circle_pending" />

                    <TextView
                        android:id="@+id/paymentStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:text="Pending"
                        android:textColor="#FFD93D"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/messageStatus"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/status_sent"
                        android:contentDescription="Message status" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <CheckBox
            android:id="@+id/messageCheckbox"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            android:button="@drawable/circular_checkbox" />

    </LinearLayout>

</LinearLayout>
