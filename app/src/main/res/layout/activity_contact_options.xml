<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <FrameLayout
            android:id="@+id/backButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back" />

        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Contacts"
            android:textSize="22sp"
            android:textColor="#CCCCCC"
            android:fontFamily="@font/space_grotesk_bold"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Compose/Edit Button -->
        <FrameLayout
            android:id="@+id/composeButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_edit"
                app:tint="#888888"
                android:contentDescription="Edit" />

        </FrameLayout>

    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="40dp"
            android:paddingBottom="32dp"
            android:gravity="center_horizontal">

            <!-- Profile Picture -->
            <ImageView
                android:id="@+id/profilePicture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/default_avatar"
                android:background="@drawable/profile_circle_bg"
                android:layout_marginBottom="20dp"
                android:contentDescription="Profile Picture" />

            <!-- Username -->
            <TextView
                android:id="@+id/contactName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@WIZARD"
                android:textSize="18sp"
                android:textColor="#CCCCCC"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginBottom="40dp" />

            <!-- Change Username Option -->
            <LinearLayout
                android:id="@+id/changeUsernameButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/wallet_token_bg"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <!-- Icon Background -->
                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/top_icon_bg">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_edit"
                        app:tint="#888888"
                        android:contentDescription="Edit" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Change Username"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="16dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="#666666"
                    android:contentDescription="Arrow" />

            </LinearLayout>

            <!-- Block Contact Option -->
            <LinearLayout
                android:id="@+id/blockContactOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/wallet_token_bg"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <!-- Icon Background -->
                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/top_icon_bg">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_person"
                        app:tint="#888888"
                        android:contentDescription="Person" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Block Contact"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="16dp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/blockContactSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/SwitchTheme" />

            </LinearLayout>

            <!-- Favorite Option -->
            <LinearLayout
                android:id="@+id/favoriteOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/wallet_token_bg"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <!-- Icon Background -->
                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/top_icon_bg">

                    <ImageView
                        android:id="@+id/favoriteIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_star_outline"
                        app:tint="#888888"
                        android:contentDescription="Star" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Favorite"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="16dp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/favoriteSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/SwitchTheme" />

            </LinearLayout>

            <!-- Delete Contact Option -->
            <LinearLayout
                android:id="@+id/deleteContactOption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/wallet_token_bg"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <!-- Icon Background -->
                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/top_icon_bg">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_delete"
                        app:tint="#FF3B30"
                        android:contentDescription="Delete" />

                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Delete Contact"
                    android:textSize="15sp"
                    android:textColor="#FF3B30"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="16dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="#666666"
                    android:contentDescription="Arrow" />

            </LinearLayout>

            <!-- Hidden fields for backward compatibility -->
            <EditText
                android:id="@+id/displayNameInput"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/saveDisplayNameButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/blockContactButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/deleteContactButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/contactAddress"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/distressStarIcon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:background="#0A0A0A"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Messages Nav Item -->
        <LinearLayout
            android:id="@+id/navMessages"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_item_ripple"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/sym_action_chat"
                app:tint="@color/text_gray"
                android:layout_marginBottom="4dp"
                android:contentDescription="Messages" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Messages"
                android:textSize="11sp"
                android:textColor="@color/text_gray"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

        <!-- Wallet Nav Item -->
        <LinearLayout
            android:id="@+id/navWallet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_item_ripple"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_wallet"
                android:layout_marginBottom="4dp"
                app:tint="@color/text_gray"
                android:contentDescription="Wallet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet"
                android:textSize="11sp"
                android:textColor="@color/text_gray"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

        <!-- Add Friend Nav Item -->
        <LinearLayout
            android:id="@+id/navAddFriend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_item_ripple"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add_friend"
                app:tint="@color/text_gray"
                android:layout_marginBottom="4dp"
                android:contentDescription="Add Friend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Friend"
                android:textSize="11sp"
                android:textColor="@color/text_gray"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

        <!-- Lock Nav Item -->
        <LinearLayout
            android:id="@+id/navLock"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_item_ripple"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lock"
                android:layout_marginBottom="4dp"
                app:tint="@color/text_gray"
                android:contentDescription="Lock" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lock"
                android:textSize="11sp"
                android:textColor="@color/text_gray"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
