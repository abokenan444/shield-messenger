<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Timestamp and status (moved to top) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/timestampText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/n_1234_pm"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/statusIcon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_check"
            android:contentDescription="Message status" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end|center_vertical">

        <!-- Selection Checkbox (hidden by default) -->
        <CheckBox
            android:id="@+id/messageCheckbox"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:visibility="gone"
            android:layout_marginEnd="8dp"
            android:button="@drawable/circular_checkbox" />

        <LinearLayout
            android:id="@+id/voiceBubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_sent_bg"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:minWidth="196dp"
            android:maxWidth="260dp">

        <!-- Play/Pause button with white circle background -->
        <FrameLayout
            android:layout_width="24dp"
            android:layout_height="24dp">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/voice_play_button_circle" />

            <ImageView
                android:id="@+id/playButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_play_blue"
                android:padding="5dp"
                android:contentDescription="Play voice message" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:gravity="center_vertical">

            <!-- Waveform with progress overlay -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1">

                <!-- Background waveform (dimmed) -->
                <ImageView
                    android:id="@+id/waveformView"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:src="@drawable/waveform_bars"
                    android:scaleType="fitXY"
                    android:alpha="0.3"
                    android:contentDescription="Voice waveform" />

                <!-- Progress overlay -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp">

                    <ImageView
                        android:id="@+id/waveformProgress"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:src="@drawable/waveform_bars"
                        android:scaleType="fitXY"
                        android:contentDescription="Waveform progress" />

                    <!-- Progress bar for clipping -->
                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:max="100"
                        android:progress="0"
                        android:visibility="invisible" />
                </FrameLayout>
            </FrameLayout>

            <!-- Duration / Current time -->
            <TextView
                android:id="@+id/durationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/n_000"
                android:textColor="?attr/colorOnSurface"
                android:textSize="11sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</LinearLayout>
