<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Decorative Gradient Shape - Top Left -->
    <View
        android:layout_width="239dp"
        android:layout_height="239dp"
        android:layout_marginStart="-157dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/welcome_gradient_shape"
        android:rotation="-45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Decorative Gradient Shape - Bottom Right -->
    <View
        android:layout_width="239dp"
        android:layout_height="239dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="580dp"
        android:background="@drawable/welcome_gradient_shape"
        android:rotation="135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/secure_logo_new"
        android:contentDescription="Shield Messenger Logo"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- App Name -->
    <TextView
        android:id="@+id/appTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shield_messenger_2"
        android:fontFamily="@font/space_grotesk_bold"
        android:textSize="28sp"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- App Description -->
    <TextView
        android:id="@+id/appDescriptionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/private_messaging_with_endtoend_encrypti"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textAlignment="center"
        android:lineSpacingMultiplier="1.4"
        android:layout_marginTop="12dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/appTitleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Feature Highlights -->
    <LinearLayout
        android:id="@+id/featuresLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintTop_toBottomOf="@id/appDescriptionText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/endtoend_encrypted"
            android:fontFamily="@font/poppins_medium"
            android:textSize="13sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/decentralized_amp_peertopeer"
            android:fontFamily="@font/poppins_medium"
            android:textSize="13sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="6dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open_source_amp_transparent"
            android:fontFamily="@font/poppins_medium"
            android:textSize="13sp"
            android:textColor="?attr/colorOnSurfaceVariant" />

    </LinearLayout>

    <!-- Create New Account Button -->
    <TextView
        android:id="@+id/newAccountButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="32dp"
        android:text="@string/get_started"
        android:textSize="16sp"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="@font/space_grotesk_bold"
        android:background="@drawable/lock_button_bg"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/featuresLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Import Text -->
    <TextView
        android:id="@+id/importText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/newAccountButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="false" />

    <!-- SHIELD MESSENGER Text at Bottom -->
    <TextView
        android:id="@+id/appNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shield_messenger"
        android:fontFamily="@font/space_grotesk_bold"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:alpha="0.5"
        android:letterSpacing="0.15"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
