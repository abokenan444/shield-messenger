<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Decorative Gradient Shape - Top Left -->
    <View
        android:layout_width="239dp"
        android:layout_height="239dp"
        android:layout_marginStart="-157dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/welcome_gradient_shape"
        android:rotation="-45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Decorative Gradient Shape - Bottom Right -->
    <View
        android:layout_width="239dp"
        android:layout_height="239dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="580dp"
        android:background="@drawable/welcome_gradient_shape"
        android:rotation="135"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/secure_logo_new"
        android:contentDescription="Secure Legion Logo"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Create New Account Button -->
    <TextView
        android:id="@+id/newAccountButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="58dp"
        android:layout_marginTop="80dp"
        android:text="Create New Account"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/space_grotesk_bold"
        android:background="@drawable/lock_button_bg"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Import Text -->
    <TextView
        android:id="@+id/importText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:textSize="14sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/newAccountButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="false" />

    <!-- SECURE LEGION Text at Bottom -->
    <TextView
        android:id="@+id/appNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SECURE LEGION"
        android:fontFamily="@font/space_grotesk_bold"
        android:textSize="20sp"
        android:textColor="#888888"
        android:letterSpacing="0.1"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
