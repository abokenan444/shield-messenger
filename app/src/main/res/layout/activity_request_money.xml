<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:fitsSystemWindows="true">

        <!-- Back Button -->
        <FrameLayout
            android:id="@+id/backButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back" />

        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SecurePay"
            android:textSize="28sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="@font/space_grotesk_bold"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Menu Button -->
        <FrameLayout
            android:id="@+id/menuButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_clock"
                app:tint="?attr/colorOnSurfaceVariant"
                android:contentDescription="Transaction History" />

        </FrameLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="24dp">

            <!-- Amount Card (matches wallet balance card style) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/wallet_balance_bg"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/currencyIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_solana"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Chain icon" />

                    <EditText
                        android:id="@+id/amountInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="0.00"
                        android:textSize="28sp"
                        android:textColor="?attr/colorOnSurface"
                        android:textColorHint="#666666"
                        android:textStyle="bold"
                        android:fontFamily="@font/space_grotesk_bold"
                        android:inputType="numberDecimal"
                        android:minHeight="0dp"
                        android:padding="0dp" />

                    <ImageView
                        android:id="@+id/toggleCurrency"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_swap"
                        app:tint="?attr/colorOnSurfaceVariant"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Toggle currency display" />

                </LinearLayout>

            </LinearLayout>

            <!-- Wallet Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/wallet_token_bg"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:gravity="center_vertical"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="12dp">

                <!-- Wallet Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fromWalletNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wallet 1"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="@font/poppins_medium" />

                    <TextView
                        android:id="@+id/fromAddressShort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADm9P...2eoLX5"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:fontFamily="monospace"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <!-- Edit Wallet Button -->
                <FrameLayout
                    android:id="@+id/fromWalletDropdown"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/top_icon_bg"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_edit_pencil"
                        app:tint="?attr/colorOnSurfaceVariant"
                        android:contentDescription="Change wallet" />

                </FrameLayout>

            </LinearLayout>

            <!-- Payment Type Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/wallet_token_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Chain icon -->
                    <ImageView
                        android:id="@+id/paymentTypeIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_solana"
                        android:scaleType="fitCenter"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Privacy type" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Payment Type"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:fontFamily="@font/poppins_regular" />

                    <LinearLayout
                        android:id="@+id/paymentTypeDropdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless">

                        <TextView
                            android:id="@+id/paymentTypeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Private"
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurface"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginEnd="4dp" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_arrow_forward"
                            android:rotation="90"
                            app:tint="?attr/colorOnSurfaceVariant"
                            android:contentDescription="Dropdown" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/requestNowButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/wallet_action_button_bg"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Request"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/sendNowButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/wallet_action_button_bg"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Send"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
