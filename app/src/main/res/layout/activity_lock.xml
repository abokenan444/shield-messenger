<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Logo at top -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="140dp"
        android:layout_height="141dp"
        android:src="@drawable/secure_logo_new"
        android:layout_marginTop="120dp"
        android:contentDescription="Shield Messenger Logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Password Section (shown when wallet exists) -->
    <LinearLayout
        android:id="@+id/passwordSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="260dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Sign in Title -->
        <TextView
            android:id="@+id/signInTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textColor="@color/lock_title_gray"
            android:textSize="34sp"
            android:fontFamily="@font/space_grotesk_bold"
            android:layout_marginBottom="13dp" />

        <!-- Subtitle Text -->
        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your privacy, your right."
            android:textColor="@color/lock_subtitle_gray"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.5"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginBottom="15dp" />

        <!-- Password Input Container -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/lock_password_input_bg"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="@color/lock_password_hint"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:paddingStart="19dp"
                android:paddingEnd="50dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_regular" />

            <!-- Password visibility toggle icon -->
            <ImageView
                android:id="@+id/passwordToggle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@android:drawable/ic_menu_view"
                app:tint="@color/lock_icon_gray"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Toggle password visibility" />

        </RelativeLayout>

        <!-- Sign In Button -->
        <TextView
            android:id="@+id/unlockButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:text="Sign In"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:background="@drawable/lock_button_bg"
            android:gravity="center"
            android:fontFamily="@font/space_grotesk_bold"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="24dp" />

        <!-- Biometric Authentication Button -->
        <ImageView
            android:id="@+id/biometricButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_fingerprint"
            android:scaleType="fitCenter"
            android:alpha="0.3"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            android:contentDescription="Unlock with biometric"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- Forgot Password / Import Recovery -->
    <TextView
        android:id="@+id/forgotPasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Import Account"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
