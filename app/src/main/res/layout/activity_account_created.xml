<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:paddingTop="60dp"
            android:paddingBottom="32dp">

            <!-- Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recovery Seed"
                android:fontFamily="@font/space_grotesk_bold"
                android:textSize="34sp"
                android:textColor="@color/lock_title_gray"
                android:layout_marginBottom="32dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Seed phrase box â€” single bordered container with all words -->
            <TextView
                android:id="@+id/seedPhraseBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/lock_password_input_bg"
                android:fontFamily="monospace"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:lineSpacingMultiplier="1.8"
                android:gravity="center"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="28dp"
                android:paddingBottom="28dp"
                app:layout_constraintTop_toBottomOf="@id/titleText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Copy + QR icons row -->
            <LinearLayout
                android:id="@+id/actionIconsRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/seedPhraseBox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Copy icon -->
                <FrameLayout
                    android:id="@+id/copyButton"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="@drawable/glass_circle_bg"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_copy"
                        app:tint="#999999"
                        android:contentDescription="Copy seed phrase" />

                </FrameLayout>

            </LinearLayout>

            <!-- Checkbox -->
            <CheckBox
                android:id="@+id/confirmCheckbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_regular"
                android:buttonTint="#FFFFFF"
                android:padding="12dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/actionIconsRow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Continue Button -->
            <TextView
                android:id="@+id/continueButton"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_marginTop="20dp"
                android:text="Continue"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/space_grotesk_bold"
                android:background="@drawable/lock_button_bg"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toBottomOf="@id/confirmCheckbox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Skip for now link -->
            <TextView
                android:id="@+id/skipButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip for now"
                android:textSize="14sp"
                android:textColor="#666666"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toBottomOf="@id/continueButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
