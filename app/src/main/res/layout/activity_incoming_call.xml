<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Title: Secure Call -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Secure Call"
        android:textSize="24sp"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="@font/space_grotesk_bold"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Animated Ring Container (centered) -->
    <FrameLayout
        android:id="@+id/callIconContainer"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.35">

        <!-- Glowing rotating ring -->
        <ImageView
            android:id="@+id/animatedRing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:src="@drawable/glowing_ring_animation"
            android:contentDescription="Animated call ring" />

        <!-- Lock icon centered -->
        <ImageView
            android:id="@+id/lockIcon"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_call_lock"
            android:contentDescription="Secure call lock icon" />
    </FrameLayout>

    <!-- Incoming Call Text -->
    <TextView
        android:id="@+id/callStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Incoming Call"
        android:textSize="18sp"
        android:textColor="#CCCCCC"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toBottomOf="@id/callIconContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contact Name -->
    <TextView
        android:id="@+id/contactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@Contact"
        android:textSize="28sp"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="@font/space_grotesk_bold"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/callStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Decline Button (Circular) - Top center -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/declineButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:src="@drawable/ic_call_end"
        app:fabSize="normal"
        app:fabCustomSize="72dp"
        app:maxImageSize="32dp"
        app:tint="#666666"
        app:backgroundTint="#FFFFFF"
        app:elevation="6dp"
        app:borderWidth="0dp"
        android:contentDescription="Decline call"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Slide to Answer Container -->
    <FrameLayout
        android:id="@+id/slideToAnswerContainer"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Track/Rail (background) -->
        <View
            android:id="@+id/slideTrack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/slide_track_background" />

        <!-- "Slide to answer" text -->
        <TextView
            android:id="@+id/slideHintText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Slide to answer"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="@font/poppins_medium"
            android:alpha="0.7" />

        <!-- Slidable Answer Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/answerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_call"
            app:fabSize="normal"
            app:fabCustomSize="72dp"
            app:maxImageSize="32dp"
            app:tint="#FFFFFF"
            app:backgroundTint="#00C853"
            app:elevation="8dp"
            app:borderWidth="0dp"
            android:contentDescription="Slide to answer call" />

    </FrameLayout>

    <!-- Hidden contact avatar for compatibility -->
    <ImageView
        android:id="@+id/contactAvatar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Quick Unlock Overlay (shown when app is locked) -->
    <FrameLayout
        android:id="@+id/unlockOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <!-- Lock icon -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_lock"
                app:tint="#FFFFFF"
                android:contentDescription="App locked" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="App Locked"
                android:textSize="24sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/space_grotesk_bold"
                android:textStyle="bold" />

            <!-- Instructions -->
            <TextView
                android:id="@+id/unlockInstructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Unlock to answer this call"
                android:textSize="16sp"
                android:textColor="#CCCCCC"
                android:fontFamily="@font/poppins_regular"
                android:textAlignment="center" />

            <!-- Timeout countdown -->
            <TextView
                android:id="@+id/timeoutCountdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Call will be missed in 30s"
                android:textSize="14sp"
                android:textColor="#FF6B6B"
                android:fontFamily="@font/poppins_medium" />

            <!-- Password Entry (hidden by default, shown if biometric fails/not available) -->
            <LinearLayout
                android:id="@+id/passwordEntryContainer"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/quickPasswordInput"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:hint="Enter password"
                    android:inputType="textPassword"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="#888888"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="16sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/submitPasswordButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:text="Unlock"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/poppins_semibold"
                    app:backgroundTint="#00C853"
                    app:cornerRadius="28dp" />

            </LinearLayout>

            <!-- Unlock button (biometric or show password field) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/quickUnlockButton"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_marginTop="32dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:text="Unlock"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_semibold"
                app:icon="@drawable/ic_fingerprint"
                app:iconGravity="textStart"
                app:iconTint="#FFFFFF"
                app:iconSize="28dp"
                app:backgroundTint="#00C853"
                app:cornerRadius="32dp"
                app:elevation="8dp" />

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
