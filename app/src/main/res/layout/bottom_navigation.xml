<?xml version="1.0" encoding="utf-8"?>
<!-- Bottom Navigation - Floating Glass Pill -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomNav"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginStart="50dp"
    android:layout_marginEnd="50dp"
    android:layout_marginBottom="20dp"
    android:orientation="horizontal"
    android:background="@drawable/glass_nav_bg"
    android:clipToOutline="true"
    android:gravity="center_vertical"
    android:baselineAligned="false">

    <!-- Chats Nav Item -->
    <LinearLayout
        android:id="@+id/navMessages"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/nav_item_ripple"
        android:clickable="true"
        android:focusable="true">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_nav_chat"
                app:tint="?attr/colorOnSurfaceVariant"
                android:contentDescription="Chats" />

            <!-- Badge for unread messages -->
            <TextView
                android:id="@+id/unreadMessagesBadge"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="-4dp"
                android:layout_marginEnd="-4dp"
                android:background="@drawable/badge_bg"
                android:gravity="center"
                android:textSize="9sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:visibility="gone" />

        </FrameLayout>

        <TextView
            android:id="@+id/navMessagesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chats"
            android:textSize="10sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="@font/poppins_medium" />

    </LinearLayout>

    <!-- Contacts Nav Item -->
    <LinearLayout
        android:id="@+id/navContacts"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/nav_item_ripple"
        android:clickable="true"
        android:focusable="true">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_nav_contacts"
                app:tint="?attr/colorOnSurfaceVariant"
                android:contentDescription="Contacts" />

            <!-- Badge for pending friend requests -->
            <TextView
                android:id="@+id/friendRequestBadge"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="-4dp"
                android:layout_marginEnd="-4dp"
                android:background="@drawable/badge_bg"
                android:gravity="center"
                android:textSize="9sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:visibility="gone" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contacts"
            android:textSize="10sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="@font/poppins_medium" />

    </LinearLayout>

    <!-- Wallet Nav Item -->
    <LinearLayout
        android:id="@+id/navWallet"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/nav_item_ripple"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_nav_wallet"
            app:tint="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="2dp"
            android:contentDescription="Wallet" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallet"
            android:textSize="10sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="@font/poppins_medium" />

    </LinearLayout>

    <!-- Profile Nav Item -->
    <LinearLayout
        android:id="@+id/navProfile"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/nav_item_ripple"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_nav_profile"
            app:tint="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="2dp"
            android:contentDescription="Profile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile"
            android:textSize="10sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="@font/poppins_medium" />

    </LinearLayout>

</LinearLayout>
