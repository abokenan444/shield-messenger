<?xml version="1.0" encoding="utf-8"?>
<!-- Bottom Navigation - Reusable Component -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomNav"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:orientation="horizontal"
    android:background="#0A0A0A"
    android:gravity="center"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <!-- Messages Nav Item -->
    <LinearLayout
        android:id="@+id/navMessages"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/nav_item_ripple"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/sym_action_chat"
            app:tint="@color/text_gray"
            android:layout_marginBottom="4dp"
            android:contentDescription="Messages" />

        <TextView
            android:id="@+id/navMessagesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Messages"
            android:textSize="11sp"
            android:textColor="@color/text_gray"
            android:fontFamily="@font/poppins_medium" />

    </LinearLayout>

    <!-- Wallet Nav Item -->
    <LinearLayout
        android:id="@+id/navWallet"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/nav_item_ripple"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_wallet"
            android:layout_marginBottom="4dp"
            app:tint="@color/text_gray"
            android:contentDescription="Wallet" />

        <TextView
            android:id="@+id/navWalletLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wallet"
            android:textSize="11sp"
            android:textColor="@color/text_gray"
            android:fontFamily="@font/poppins_medium" />

    </LinearLayout>

    <!-- Add Friend Nav Item -->
    <LinearLayout
        android:id="@+id/navAddFriend"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/nav_item_ripple"
        android:clickable="true"
        android:focusable="true">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add_friend"
                app:tint="@color/text_gray"
                android:contentDescription="Add Friend" />

            <!-- Badge for pending friend requests -->
            <TextView
                android:id="@+id/friendRequestBadge"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="-4dp"
                android:layout_marginEnd="-4dp"
                android:background="@drawable/badge_bg"
                android:gravity="center"
                android:textSize="9sp"
                android:textStyle="bold"
                android:textColor="@color/text_white"
                android:visibility="gone" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Friend"
            android:textSize="11sp"
            android:textColor="@color/text_gray"
            android:fontFamily="@font/poppins_medium" />

    </LinearLayout>

    <!-- Phone Nav Item -->
    <LinearLayout
        android:id="@+id/navPhone"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/nav_item_ripple"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_call"
            android:layout_marginBottom="4dp"
            app:tint="@color/text_gray"
            android:contentDescription="Phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textSize="11sp"
            android:textColor="@color/text_gray"
            android:fontFamily="@font/poppins_medium" />

    </LinearLayout>

</LinearLayout>
