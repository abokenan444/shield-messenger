<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:fitsSystemWindows="true">

        <!-- Back Button -->
        <FrameLayout
            android:id="@+id/backButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back" />

        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Transfer Details"
            android:textSize="28sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="@font/space_grotesk_bold"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Menu Button -->
        <FrameLayout
            android:id="@+id/menuButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_settings_cog"
                app:tint="?attr/colorOnSurfaceVariant"
                android:contentDescription="Menu" />

        </FrameLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- Recipient Profile -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">

                <ImageView
                    android:id="@+id/recipientAvatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/default_avatar"
                    android:background="@drawable/profile_circle_bg"
                    android:contentDescription="Recipient avatar" />

                <TextView
                    android:id="@+id/recipientName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Alex"
                    android:textSize="18sp"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/poppins_semibold" />

            </LinearLayout>

            <!-- Success Message and Amount -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You have successfully sent!"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/amountSent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$1,250"
                    android:textSize="48sp"
                    android:textColor="#C0C0C0"
                    android:fontFamily="@font/space_grotesk_bold" />

            </LinearLayout>

            <!-- FROM Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FROM:"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Wallet Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Wallet Name"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/fromWalletName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wallet 2"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="@font/poppins_regular" />

                </LinearLayout>

                <!-- Address -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Address"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/fromAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADm9P.....2eoLX5"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="@font/poppins_regular" />

                </LinearLayout>

            </LinearLayout>

            <!-- TO Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TO:"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Wallet Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Wallet Name"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/toWalletName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wallet 2"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="@font/poppins_regular" />

                </LinearLayout>

                <!-- Address -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Address"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/toAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADm9P.....2eoLX5"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="@font/poppins_regular" />

                </LinearLayout>

                <!-- Sent $SOL -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sent $SOL"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/sentSol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="@font/poppins_regular" />

                </LinearLayout>

                <!-- Money Sent -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Money Sent"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/moneySent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$1,250"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="@font/poppins_regular" />

                </LinearLayout>

                <!-- Expirers Date/Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Expirers Date/ Time"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/expiryDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 Min 17 Feb 2023"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="@font/poppins_regular" />

                </LinearLayout>

                <!-- Transaction number -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Transaction number"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/transactionNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#2023ED101"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="@font/poppins_regular" />

                </LinearLayout>

                <!-- Applications fee -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Applications fee"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/applicationsFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$00.00"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="@font/poppins_regular" />

                </LinearLayout>

                <!-- Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Time"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/transactionTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:41 pm"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="@font/poppins_regular" />

                </LinearLayout>

                <!-- Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Date"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/transactionDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17 Feb, 2023"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="@font/poppins_regular" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/backToHomeButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            android:background="@drawable/swap_button_bg"
            android:fontFamily="@font/poppins_semibold"
            android:text="Back to Home"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp" />

        <FrameLayout
            android:id="@+id/shareButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/swap_button_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_share"
                app:tint="?attr/colorOnSurfaceVariant"
                android:contentDescription="Share" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
