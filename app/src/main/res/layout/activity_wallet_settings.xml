<?xml version="1.0" encoding="utf-8"?>
<!-- Wallet Settings Activity -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <FrameLayout
            android:id="@+id/backButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back" />

        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Wallet Settings"
            android:textSize="24sp"
            android:textColor="#999999"
            android:fontFamily="@font/space_grotesk_bold"
            android:gravity="center" />

        <!-- Spacer for alignment -->
        <View
            android:layout_width="42dp"
            android:layout_height="42dp" />

    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Chain Filter -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECT CHAIN"
                android:textSize="11sp"
                android:textColor="@color/text_gray"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Solana Button -->
                <LinearLayout
                    android:id="@+id/solanaChainButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/wallet_dropdown_bg"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_solana"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Solana" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Solana"
                        android:textSize="14sp"
                        android:textColor="@color/text_white"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>

                <!-- Zcash Button -->
                <LinearLayout
                    android:id="@+id/zcashChainButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/wallet_dropdown_bg"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_zcash"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Zcash" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zcash"
                        android:textSize="14sp"
                        android:textColor="@color/text_white"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>

            </LinearLayout>

            <!-- Current Wallet Selector -->
            <LinearLayout
                android:id="@+id/currentWalletSelector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/wallet_token_bg"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <!-- Wallet Icon -->
                <FrameLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:id="@+id/currentWalletIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_wallet" />
                </FrameLayout>

                <!-- Wallet Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/currentWalletName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wallet 1"
                        android:textSize="15sp"
                        android:textColor="@color/text_white"
                        android:fontFamily="@font/poppins_medium" />

                    <TextView
                        android:id="@+id/currentWalletBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textSize="12sp"
                        android:textColor="#888888"
                        android:fontFamily="@font/poppins_regular" />

                </LinearLayout>

                <!-- Dropdown Icon -->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_down"
                    android:tint="#888888"
                    android:contentDescription="Select Wallet" />

            </LinearLayout>

            <!-- Wallet Actions -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WALLET ACTIONS"
                android:textSize="11sp"
                android:textColor="@color/text_gray"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp" />

            <!-- Create New Wallet -->
            <LinearLayout
                android:id="@+id/createWalletButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="72dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_action_bg"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_wallet"
                        app:tint="@color/text_white"
                        android:contentDescription="Create Wallet" />
                </FrameLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Create New Wallet"
                    android:textSize="16sp"
                    android:textColor="@color/text_white" />

            </LinearLayout>

            <!-- Import Wallet -->
            <LinearLayout
                android:id="@+id/importWalletButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="72dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_action_bg"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_import_wallet"
                        app:tint="@color/text_white"
                        android:contentDescription="Import Wallet" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Import Wallet"
                        android:textSize="16sp"
                        android:textColor="@color/text_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Import existing SOL or ZEC wallet"
                        android:textSize="12sp"
                        android:textColor="@color/text_gray"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Export Private Key -->
            <LinearLayout
                android:id="@+id/exportKeyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="72dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_action_bg"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_eye"
                        app:tint="@color/text_white"
                        android:contentDescription="Export Key" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Export Private Key"
                        android:textSize="16sp"
                        android:textColor="@color/text_white" />

                    <TextView
                        android:id="@+id/exportKeySubtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View or export wallet private key"
                        android:textSize="12sp"
                        android:textColor="@color/text_gray"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Delete Wallet -->
            <LinearLayout
                android:id="@+id/deleteWalletButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="72dp"
                android:orientation="horizontal"
                android:background="@drawable/settings_action_bg"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/settings_icon_bg"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_delete"
                        app:tint="@color/text_white"
                        android:contentDescription="Delete Wallet" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete Wallet"
                        android:textSize="16sp"
                        android:textColor="@color/text_white" />

                    <TextView
                        android:id="@+id/deleteWalletSubtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Permanently remove this wallet"
                        android:textSize="12sp"
                        android:textColor="@color/text_gray"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
