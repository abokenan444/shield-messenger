<?xml version="1.0" encoding="utf-8"?>
<!-- Wallet Settings Activity -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/header_bg">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_bg"
        android:orientation="horizontal"
        android:fitsSystemWindows="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/text_white"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Wallet Settings"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_white" />

    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Current Wallet Info -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CURRENT WALLET"
                android:textSize="11sp"
                android:textColor="@color/text_gray"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/card_bg"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/border_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_wallet"
                            app:tint="@color/primary_blue"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="Wallet" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/currentWalletName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Wallet 1"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_white" />

                            <TextView
                                android:id="@+id/currentWalletType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Main Account Wallet"
                                android:textSize="12sp"
                                android:textColor="@color/text_gray"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Wallet Actions -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WALLET ACTIONS"
                android:textSize="11sp"
                android:textColor="@color/text_gray"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp" />

            <!-- Create New Wallet -->
            <LinearLayout
                android:id="@+id/createWalletButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/settings_item_bg"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_add_friend"
                    app:tint="@color/primary_blue"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Create Wallet" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create New Wallet"
                        android:textSize="16sp"
                        android:textColor="@color/text_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Generate a new Solana wallet"
                        android:textSize="12sp"
                        android:textColor="@color/text_gray"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Export Private Key -->
            <LinearLayout
                android:id="@+id/exportKeyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/settings_item_bg"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_eye"
                    app:tint="@color/text_white"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Export Key" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Export Private Key"
                        android:textSize="16sp"
                        android:textColor="@color/text_white" />

                    <TextView
                        android:id="@+id/exportKeySubtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View or export wallet private key"
                        android:textSize="12sp"
                        android:textColor="@color/text_gray"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Delete Wallet -->
            <LinearLayout
                android:id="@+id/deleteWalletButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/settings_item_bg"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_delete"
                    app:tint="@color/text_white"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="Delete Wallet" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete Wallet"
                        android:textSize="16sp"
                        android:textColor="@color/text_white" />

                    <TextView
                        android:id="@+id/deleteWalletSubtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Permanently remove this wallet"
                        android:textSize="12sp"
                        android:textColor="@color/text_gray"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Warning Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your main account wallet is protected and cannot have its private key exported here."
                android:textSize="13sp"
                android:textColor="@color/text_gray"
                android:lineSpacingExtra="2dp"
                android:padding="8dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
