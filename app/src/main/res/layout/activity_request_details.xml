<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:fitsSystemWindows="true">

        <!-- Back Button -->
        <FrameLayout
            android:id="@+id/backButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back" />

        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Request Details"
            android:textSize="28sp"
            android:textColor="#999999"
            android:fontFamily="@font/space_grotesk_bold"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Menu Button -->
        <FrameLayout
            android:id="@+id/menuButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_settings_cog"
                app:tint="#888888"
                android:contentDescription="Menu" />

        </FrameLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- Recipient Profile -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@drawable/settings_box_bg"
                android:layout_marginBottom="32dp">

                <ImageView
                    android:id="@+id/recipientAvatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/default_avatar"
                    android:background="@drawable/profile_circle_bg"
                    android:contentDescription="Recipient avatar" />

                <TextView
                    android:id="@+id/recipientName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Alex"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppins_semibold" />

                <FrameLayout
                    android:id="@+id/editButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/settings_icon_bg"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_edit"
                        app:tint="#888888"
                        android:contentDescription="Edit" />

                </FrameLayout>

            </LinearLayout>

            <!-- Success Message and Amount -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <TextView
                    android:id="@+id/statusMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You have successfully requested!"
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/amountRequested"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0.00"
                    android:textSize="48sp"
                    android:textColor="#C0C0C0"
                    android:fontFamily="@font/space_grotesk_bold" />

            </LinearLayout>

            <!-- Transaction Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Requested Amount (crypto) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/cryptoAmountLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Requested"
                        android:textSize="13sp"
                        android:textColor="#888888"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/sentSol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00 ZEC"
                        android:textSize="13sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/poppins_regular" />

                </LinearLayout>

                <!-- USD Value -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="USD Value"
                        android:textSize="13sp"
                        android:textColor="#888888"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/moneySent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textSize="13sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/poppins_regular" />

                </LinearLayout>

                <!-- Expires -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Expires"
                        android:textSize="13sp"
                        android:textColor="#888888"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/expiryDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24 hours"
                        android:textSize="13sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/poppins_regular" />

                </LinearLayout>

                <!-- Transaction ID -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Request ID"
                        android:textSize="13sp"
                        android:textColor="#888888"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/transactionNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text=""
                        android:textSize="13sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/poppins_regular"
                        android:ellipsize="middle"
                        android:singleLine="true" />

                </LinearLayout>

                <!-- Network Fee -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Network Fee"
                        android:textSize="13sp"
                        android:textColor="#888888"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/applicationsFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textSize="13sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/poppins_regular" />

                </LinearLayout>

                <!-- Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Time"
                        android:textSize="13sp"
                        android:textColor="#888888"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/transactionTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="13sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/poppins_regular" />

                </LinearLayout>

                <!-- Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Date"
                        android:textSize="13sp"
                        android:textColor="#888888"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/transactionDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="13sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/poppins_regular" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/backToHomeButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="12dp"
            android:background="@drawable/swap_button_bg"
            android:fontFamily="@font/poppins_semibold"
            android:text="Back to Home"
            android:textAllCaps="false"
            android:textColor="@color/text_white"
            android:textSize="16sp" />

        <FrameLayout
            android:id="@+id/shareButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/swap_button_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_share"
                app:tint="#888888"
                android:contentDescription="Share" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
