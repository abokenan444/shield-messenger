<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Status bar spacer -->
        <View
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <!-- Title Row with Tor Status Dot -->
        <LinearLayout
            android:id="@+id/headerTitleRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chats"
                android:textSize="22sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/space_grotesk_bold" />

            <View
                android:id="@+id/torStatusDot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/status_dot_red" />

        </LinearLayout>

        <!-- Search Bar + Compose Button Row -->
        <LinearLayout
            android:id="@+id/searchRowContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="4dp">

            <!-- Search Bar -->
            <LinearLayout
                android:id="@+id/searchBarContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/search_bar_bg"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/searchIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_search"
                    app:tint="#666666"
                    android:contentDescription="Search" />

                <EditText
                    android:id="@+id/searchBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/transparent"
                    android:hint="Search"
                    android:textColorHint="#666666"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="text"
                    android:maxLines="1" />

            </LinearLayout>

            <!-- Compose New Message Circle -->
            <FrameLayout
                android:id="@+id/newMessageBtn"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/compose_circle_bg"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_compose"
                    app:tint="?attr/colorOnSurfaceVariant"
                    android:contentDescription="New Message" />

                <!-- Badge for pending friend requests (shown on contacts tab) -->
                <TextView
                    android:id="@+id/composeBadge"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="-2dp"
                    android:layout_marginEnd="-2dp"
                    android:background="@drawable/badge_bg"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

        <!-- Tab Pills: Messages / Groups -->
        <LinearLayout
            android:id="@+id/tabsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="14dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tabMessages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Messages"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_medium"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/tab_pill_active_bg"
                android:paddingStart="18dp"
                android:paddingEnd="18dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginEnd="10dp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipChildren="false">

                <TextView
                    android:id="@+id/tabGroups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Groups"
                    android:textSize="13sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="@font/poppins_medium"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/tab_pill_bg"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/groupsBadge"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="-4dp"
                    android:layout_marginEnd="-4dp"
                    android:background="@drawable/badge_bg"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Content Container -->
    <FrameLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Tor Status Banner (shown on pull-down, auto-hides after 5s) -->
        <TextView
            android:id="@+id/torStatusBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1A1A1A"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="13sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:visibility="gone" />

        <!-- Messages List Container -->
        <LinearLayout
            android:id="@+id/chatListContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#000000">

            <!-- Messages List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chatList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="100dp"
                android:clipToPadding="false"
                android:background="#000000" />

            <!-- Messages Empty State -->
            <LinearLayout
                android:id="@+id/messagesEmptyState"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_compose"
                    app:tint="#333333"
                    android:contentDescription="No Messages" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="No Messages Yet"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Start a conversation to get started"
                    android:textColor="#666666"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins_regular" />

            </LinearLayout>

        </LinearLayout>

        <!-- Groups List Container -->
        <include
            android:id="@+id/groupsView"
            layout="@layout/fragment_groups"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <!-- Contacts View -->
        <include
            android:id="@+id/contactsView"
            layout="@layout/fragment_contacts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <!-- Empty State (hidden) -->
        <LinearLayout
            android:id="@+id/emptyState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_gravity="center" />

    </FrameLayout>

    <!-- Bottom Navigation - Floating Glass Pill -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:background="@drawable/glass_nav_bg"
        android:clipToOutline="true"
        android:gravity="center_vertical"
        android:baselineAligned="false"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Chats Nav Item -->
        <LinearLayout
            android:id="@+id/navMessages"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_item_ripple"
            android:clickable="true"
            android:focusable="true">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_nav_chat"
                    app:tint="?attr/colorOnSurfaceVariant"
                    android:contentDescription="Chats" />

                <!-- Badge for unread messages -->
                <TextView
                    android:id="@+id/unreadMessagesBadge"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="-4dp"
                    android:layout_marginEnd="-4dp"
                    android:background="@drawable/badge_bg"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:visibility="gone" />

            </FrameLayout>

            <TextView
                android:id="@+id/navMessagesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chats"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

        <!-- Contacts Nav Item -->
        <LinearLayout
            android:id="@+id/navContacts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_item_ripple"
            android:clickable="true"
            android:focusable="true">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_nav_contacts"
                    app:tint="?attr/colorOnSurfaceVariant"
                    android:contentDescription="Contacts" />

                <!-- Badge for pending friend requests -->
                <TextView
                    android:id="@+id/friendRequestBadge"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="-4dp"
                    android:layout_marginEnd="-4dp"
                    android:background="@drawable/badge_bg"
                    android:gravity="center"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:visibility="gone" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contacts"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

        <!-- Profile Nav Item -->
        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_item_ripple"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_nav_profile"
                app:tint="?attr/colorOnSurfaceVariant"
                android:layout_marginBottom="2dp"
                android:contentDescription="Profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
