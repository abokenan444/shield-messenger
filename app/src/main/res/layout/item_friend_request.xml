<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="12dp"
    android:gravity="center_vertical">

    <!-- Checkbox (Initially hidden) -->
    <CheckBox
        android:id="@+id/requestCheckbox"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:button="@drawable/circular_checkbox"
        android:buttonTint="@null"
        android:visibility="gone" />

    <!-- Main Content with Background -->
    <LinearLayout
        android:id="@+id/requestContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/wallet_token_bg"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <!-- Profile Circle with + Icon -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/profile_circle_bg">

            <TextView
                android:id="@+id/requestIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/str_591"
                android:textSize="28sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/space_grotesk_bold"
                android:textStyle="bold" />

        </FrameLayout>

        <!-- Contact Name -->
        <TextView
            android:id="@+id/requestName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="@Wizard"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="@font/poppins_medium" />

        <!-- Status Badge (Pending/Accept/Retry) -->
        <TextView
            android:id="@+id/requestStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pending"
            android:textSize="13sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="@font/poppins_regular"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="@drawable/lock_password_input_bg" />

    </LinearLayout>

</LinearLayout>
