<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_bg"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="20dp"
    android:paddingBottom="32dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_image"
        android:textSize="18sp"
        android:textColor="#CCCCCC"
        android:fontFamily="@font/space_grotesk_bold"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- Take Photo -->
    <LinearLayout
        android:id="@+id/takePhotoOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/wallet_token_bg"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/top_icon_bg">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_camera"
                app:tint="?attr/colorOnSurfaceVariant"
                android:contentDescription="Camera" />

        </FrameLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/take_photo"
            android:textSize="15sp"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="16dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_forward"
            app:tint="#666666"
            android:contentDescription="Arrow" />

    </LinearLayout>

    <!-- Choose from Gallery -->
    <LinearLayout
        android:id="@+id/chooseGalleryOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/wallet_token_bg"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/top_icon_bg">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_gallery"
                app:tint="?attr/colorOnSurfaceVariant"
                android:contentDescription="Gallery" />

        </FrameLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/choose_from_gallery"
            android:textSize="15sp"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="16dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_forward"
            app:tint="#666666"
            android:contentDescription="Arrow" />

    </LinearLayout>

</LinearLayout>
