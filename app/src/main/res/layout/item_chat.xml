<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Foreground Content (swipeable) with lines -->
    <LinearLayout
        android:id="@+id/chatItemForeground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="@android:color/transparent">

        <!-- Top border line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1A1A1A" />

        <!-- Chat content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center_vertical">

        <!-- Avatar Circle -->
        <TextView
            android:id="@+id/chatAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/profile_circle_bg"
            android:gravity="center"
            android:text="W"
            android:textSize="20sp"
            android:textColor="@color/text_white"
            android:fontFamily="@font/space_grotesk_bold"
            android:layout_marginEnd="16dp" />

        <!-- Chat Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Name and Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/chatName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@Wizard"
                    android:textSize="16sp"
                    android:textColor="@color/text_white"
                    android:fontFamily="@font/poppins_medium" />

                <TextView
                    android:id="@+id/chatTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1m ago"
                    android:textSize="13sp"
                    android:textColor="@color/text_gray"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Message Preview -->
            <TextView
                android:id="@+id/chatMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="What's good? How are you."
                android:textSize="14sp"
                android:textColor="@color/text_gray"
                android:fontFamily="@font/poppins_regular"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Download Button for Pending Messages -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/downloadButton"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/primary_button_bg"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="Download"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:textAllCaps="false"
            android:visibility="gone" />

        <!-- Unread Badge -->
        <TextView
            android:id="@+id/unreadBadge"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/unread_badge_bg"
            android:gravity="center"
            android:text="2"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:visibility="gone" />

        <!-- Hidden elements (not shown, kept for compatibility) -->
        <TextView
            android:id="@+id/onlineIndicator"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/securityBadge"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        </LinearLayout>

        <!-- Bottom border line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1A1A1A" />

    </LinearLayout>

</FrameLayout>
