<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false">

    <!-- Background Action Buttons (revealed on swipe right) -->
    <LinearLayout
        android:id="@+id/chatItemActions"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Mute Button -->
        <FrameLayout
            android:id="@+id/actionMute"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#3A3A3C"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@android:drawable/ic_lock_silent_mode"
                    app:tint="#FFFFFF"
                    android:layout_marginBottom="4dp"
                    android:contentDescription="Mute"
                    xmlns:app="http://schemas.android.com/apk/res-auto" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mute"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:fontFamily="@font/poppins_medium" />
            </LinearLayout>
        </FrameLayout>

        <!-- Delete Button -->
        <FrameLayout
            android:id="@+id/actionDelete"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#FF3B30"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@android:drawable/ic_menu_delete"
                    app:tint="#FFFFFF"
                    android:layout_marginBottom="4dp"
                    android:contentDescription="Delete"
                    xmlns:app="http://schemas.android.com/apk/res-auto" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:fontFamily="@font/poppins_medium" />
            </LinearLayout>
        </FrameLayout>

        <!-- Pin Button -->
        <FrameLayout
            android:id="@+id/actionPin"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#FF9500"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@android:drawable/ic_input_add"
                    app:tint="#FFFFFF"
                    android:layout_marginBottom="4dp"
                    android:contentDescription="Pin"
                    xmlns:app="http://schemas.android.com/apk/res-auto" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pin"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:fontFamily="@font/poppins_medium" />
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

    <!-- Foreground Content (swipeable) -->
    <LinearLayout
        android:id="@+id/chatItemForeground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="#000000">

        <!-- Top border line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorSurfaceContainerHigh" />

        <!-- Chat content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center_vertical">

        <!-- Avatar Circle -->
        <com.securelegion.views.AvatarView
            android:id="@+id/chatAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/profile_circle_bg"
            android:layout_marginEnd="16dp" />

        <!-- Chat Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Name and Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/pinIcon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_pin"
                    android:contentDescription="Pinned"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/chatName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@Wizard"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/poppins_medium" />

                <!-- Time and Status Column -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/chatTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1m ago"
                        android:textSize="13sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:fontFamily="@font/poppins_regular" />

                    <!-- Message status indicator -->
                    <ImageView
                        android:id="@+id/chatMessageStatus"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/status_pending"
                        android:layout_marginTop="4dp"
                        android:contentDescription="Message status"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

            <!-- Message Preview -->
            <TextView
                android:id="@+id/chatMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="What's good? How are you."
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_regular"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Download Button for Pending Messages -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/downloadButton"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/primary_button_bg"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="Download"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:textAllCaps="false"
            android:visibility="gone" />

        <!-- Unread Badge -->
        <TextView
            android:id="@+id/unreadBadge"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/unread_badge_bg"
            android:gravity="center"
            android:text="2"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:visibility="gone" />

        <!-- Hidden elements (not shown, kept for compatibility) -->
        <TextView
            android:id="@+id/onlineIndicator"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/securityBadge"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        </LinearLayout>

        <!-- Bottom border line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorSurfaceContainerHigh" />

    </LinearLayout>

</FrameLayout>
