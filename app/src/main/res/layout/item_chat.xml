<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Delete Button Background (revealed on swipe) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="end">

        <LinearLayout
            android:id="@+id/deleteButtonContainer"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="#DC3545"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✕"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

    <!-- Foreground Content (swipeable) -->
    <LinearLayout
        android:id="@+id/chatItemForeground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/dark_bg"
        android:foreground="@drawable/chat_item_ripple">

    <!-- Top Border -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:gravity="center_vertical">

    <!-- Chat Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Name and Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Online Status Dot -->
            <TextView
                android:id="@+id/onlineIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="●"
                android:textSize="10sp"
                android:textColor="@color/primary_blue"
                android:layout_marginEnd="6dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/chatName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@nickname"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_white" />

            <TextView
                android:id="@+id/chatTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2m"
                android:textSize="13sp"
                android:textColor="@color/text_gray" />

        </LinearLayout>

        <!-- Message Preview with Security Badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/chatMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Message preview..."
                android:textSize="15sp"
                android:textColor="@color/text_gray"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/securityBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/security_badge_bg"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text=""
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <!-- Download Button for Pending Messages -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/downloadButton"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/primary_button_bg"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="Download"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/text_white"
        android:textAllCaps="false"
        android:visibility="gone" />

    <!-- Unread Badge -->
    <TextView
        android:id="@+id/unreadBadge"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/unread_badge_bg"
        android:gravity="center"
        android:text="2"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/text_white"
        android:visibility="gone" />

    </LinearLayout>

    <!-- Bottom Border -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border_color" />

    </LinearLayout>

</FrameLayout>
