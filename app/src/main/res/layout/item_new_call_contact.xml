<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/wallet_token_bg"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:gravity="center_vertical"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true">

    <!-- Profile Circle with Initial -->
    <FrameLayout
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/profile_circle_bg">

        <TextView
            android:id="@+id/contactInitial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="A"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/space_grotesk_bold" />

    </FrameLayout>

    <!-- Contact Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <!-- Contact Name -->
        <TextView
            android:id="@+id/contactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alice"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_medium" />

        <!-- Last Call Status -->
        <TextView
            android:id="@+id/lastCallStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last call: 2 hours ago"
            android:textSize="12sp"
            android:textColor="#666666"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Call Button -->
    <ImageView
        android:id="@+id/callButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_call"
        app:tint="#888888"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Call" />

</LinearLayout>
