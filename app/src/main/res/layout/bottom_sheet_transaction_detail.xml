<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_bg"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="8dp"
    android:paddingBottom="32dp">

    <!-- Handle Bar -->
    <View
        android:layout_width="60dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:background="#4A4A4A"
        android:layout_marginBottom="24dp" />

    <!-- Transaction Type Title -->
    <TextView
        android:id="@+id/txDetailType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sent"
        android:textSize="28sp"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="@font/space_grotesk_bold"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Chain Icon and Amount Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <!-- Chain Icon -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="24dp">

            <!-- Background Circle -->
            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle_bg" />

            <!-- Chain Icon -->
            <ImageView
                android:id="@+id/txDetailChainIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_solana"
                android:contentDescription="Chain Icon" />
        </FrameLayout>

        <!-- Amount -->
        <TextView
            android:id="@+id/txDetailAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/n_003619_sol"
            android:textSize="36sp"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="@font/space_grotesk_bold"
            android:gravity="center" />

    </LinearLayout>

    <!-- Details Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/wallet_token_bg"
        android:padding="20dp">

        <!-- Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/date"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/txDetailDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jan_11_2026_at_149_pm"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>

        <!-- Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/status_2"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/txDetailStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/succeeded"
                android:textSize="14sp"
                android:textColor="#4CAF50"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>

        <!-- To/From Address -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/txDetailAddressLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/to"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_regular" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txDetailAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dkwiiqtw"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/poppins_medium" />

                <ImageView
                    android:id="@+id/txDetailCopyAddress"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_copy"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Copy Address" />
            </LinearLayout>
        </LinearLayout>

        <!-- Network -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/network"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/txDetailNetwork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/solana"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>

        <!-- Network Fee -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/network_fee"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/txDetailNetworkFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lt_000001_sol"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
