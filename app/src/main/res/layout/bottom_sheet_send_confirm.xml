<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_bg"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="8dp"
    android:paddingBottom="24dp">

    <!-- Handle Bar -->
    <View
        android:layout_width="60dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:background="#4A4A4A"
        android:layout_marginBottom="16dp" />

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Transaction"
        android:textSize="22sp"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="@font/space_grotesk_bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Amount Display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/confirmSendAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/space_grotesk_bold"
            android:text="0.5 SOL"
            android:textColor="#C0C0C0"
            android:textSize="42sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/confirmSendAmountUSD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="â‰ˆ $75.00 USD"
            android:textColor="#666666"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Details Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/wallet_token_bg"
        android:padding="16dp"
        android:layout_marginBottom="24dp">

        <!-- Recipient Address -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:text="To Address"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/confirmSendTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="ADm9P.....2eoLX5"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- From Wallet -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:text="From Wallet"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/confirmSendFromWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Wallet 1"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Network -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:text="Network"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/confirmSendCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Solana"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Payment Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:text="Payment Type"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/confirmSendPaymentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Private"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Network Fee -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:text="Network Fee"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/confirmSendNetworkFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="~0.000005 SOL"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Note -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This transaction cannot be reversed. Please verify all details before sending."
        android:textSize="12sp"
        android:textColor="#666666"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Send Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirmSendButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/wallet_action_button_bg"
        android:fontFamily="@font/poppins_semibold"
        android:text="Send"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnSurface"
        android:textSize="16sp"
        android:layout_marginBottom="12dp" />

    <!-- Cancel Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancelSendButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/poppins_medium"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="16sp" />

</LinearLayout>
