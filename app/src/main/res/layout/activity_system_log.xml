<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Back Button -->
    <FrameLayout
        android:id="@+id/backButton"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/top_icon_bg"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_back_arrow"
            android:contentDescription="Back" />

    </FrameLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/system_log"
        android:textSize="24sp"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="@font/space_grotesk_bold"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/backButton"
        app:layout_constraintBottom_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Filter chips -->
    <LinearLayout
        android:id="@+id/filterBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/backButton">

        <TextView
            android:id="@+id/filterAll"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="center"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:text="@string/all"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_medium"
            android:background="@drawable/settings_icon_bg"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/filterErrors"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="center"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:text="@string/errors"
            android:textSize="13sp"
            android:textColor="#FF6666"
            android:fontFamily="@font/poppins_medium"
            android:background="@drawable/settings_icon_bg"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/filterWarnings"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="center"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:text="@string/warnings"
            android:textSize="13sp"
            android:textColor="#FFAA33"
            android:fontFamily="@font/poppins_medium"
            android:background="@drawable/settings_icon_bg"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Copy button -->
        <FrameLayout
            android:id="@+id/copyButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/settings_icon_bg"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_agenda"
                app:tint="#CCCCCC" />

        </FrameLayout>

        <!-- Share button -->
        <FrameLayout
            android:id="@+id/shareButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/settings_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_share"
                app:tint="#CCCCCC" />

        </FrameLayout>

    </LinearLayout>

    <!-- Log count -->
    <TextView
        android:id="@+id/logCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:textColor="#666666"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filterBar" />

    <!-- ScrollView for log content -->
    <ScrollView
        android:id="@+id/logScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/logCountText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/logTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="#CCCCCC"
            android:fontFamily="monospace"
            android:lineSpacingExtra="3dp"
            android:padding="12dp"
            android:background="?attr/colorSurfaceContainerHigh"
            android:textIsSelectable="true"
            android:visibility="gone" />

    </ScrollView>

    <!-- No data message -->
    <TextView
        android:id="@+id/noDataTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_log_entries_found"
        android:textSize="16sp"
        android:textColor="#666666"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
