<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_bg"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="24dp"
    android:paddingBottom="0dp">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_new_identity"
        android:textSize="24sp"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="@font/space_grotesk_bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Warning Message -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/this_will_generate_a_completely_new_iden"
        android:textSize="15sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        android:layout_marginBottom="24dp" />

    <!-- What Will Be Generated Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#1A1A1A"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Section Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/new_identity_includes"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginBottom="12dp" />

            <!-- Contact Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:text="@string/str_495"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/poppins_medium" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/new_contact_card_cidpin"
                    android:textSize="14sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_regular" />
            </LinearLayout>

            <!-- Tor Onion Address -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:text="@string/str_495"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/poppins_medium" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/new_tor_onion_address"
                    android:textSize="14sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_regular" />
            </LinearLayout>

            <!-- Friend Requests Note -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:text="@string/str_495"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/poppins_medium" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/you_will_need_to_send_new_friend_request"
                    android:textSize="14sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_regular" />
            </LinearLayout>

            <!-- Wallet Unchanged Note -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:text="@string/str_495"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/poppins_medium" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/your_crypto_wallet_will_remain_untouched"
                    android:textSize="14sp"
                    android:textColor="#CCCCCC"
                    android:fontFamily="@font/poppins_regular" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- Confirm Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirmNewIdentityButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/swap_button_bg"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/create_new_identity_2"
            android:textAllCaps="true"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Cancel Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelNewIdentityButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/wallet_dropdown_bg"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/cancel_2"
            android:textAllCaps="true"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
