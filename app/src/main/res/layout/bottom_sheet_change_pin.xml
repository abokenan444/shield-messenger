<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_bg"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="24dp"
    android:paddingBottom="32dp"
    android:gravity="center_horizontal">

    <!-- Icon -->
    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/settings_icon_bg"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_lock"
            app:tint="?attr/colorOnSurfaceVariant" />

    </FrameLayout>

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Group PIN"
        android:textSize="22sp"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="@font/space_grotesk_bold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Message -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter a new 6-digit PIN"
        android:textSize="14sp"
        android:textColor="#8C8C8C"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- PIN Boxes -->
    <LinearLayout
        android:id="@+id/pinBoxesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/pinBox1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/pin_box_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="?attr/colorOnSurface"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_medium" />

        <EditText
            android:id="@+id/pinBox2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/pin_box_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="?attr/colorOnSurface"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_medium" />

        <EditText
            android:id="@+id/pinBox3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/pin_box_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="?attr/colorOnSurface"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_medium" />

        <EditText
            android:id="@+id/pinBox4"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/pin_box_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="?attr/colorOnSurface"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_medium" />

        <EditText
            android:id="@+id/pinBox5"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/pin_box_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="?attr/colorOnSurface"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_medium" />

        <EditText
            android:id="@+id/pinBox6"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/pin_box_bg"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="?attr/colorOnSurface"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_medium" />

    </LinearLayout>

    <!-- Save Button -->
    <TextView
        android:id="@+id/savePinButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/swap_button_bg"
        android:gravity="center"
        android:text="Save PIN"
        android:textSize="18sp"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="@font/poppins_semibold"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="12dp" />

    <!-- Cancel Button -->
    <TextView
        android:id="@+id/cancelPinButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/settings_box_bg"
        android:gravity="center"
        android:text="Cancel"
        android:textSize="18sp"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="@font/poppins_semibold"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>
