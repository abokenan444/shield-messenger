<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="48dp"
        android:paddingBottom="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <View
            android:id="@+id/backButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/back_button_bg"
            android:clickable="true"
            android:focusable="true" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Members Title -->
        <TextView
            android:id="@+id/membersTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Members"
            android:fontFamily="@font/space_grotesk_bold"
            android:textSize="20sp"
            android:textColor="#CCCCCC"
            android:layout_gravity="center_vertical" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Settings Icon -->
        <FrameLayout
            android:id="@+id/settingsIcon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_settings_cog"
                android:contentDescription="Settings" />

        </FrameLayout>

    </LinearLayout>

    <!-- Search Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/searchBarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/lock_password_input_bg"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_search"
            app:tint="?attr/colorOnSurfaceVariant"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="Search" />

        <EditText
            android:id="@+id/searchBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@android:color/transparent"
            android:hint="Search Members.."
            android:textColorHint="@color/text_gray"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/searchIcon"
            app:layout_constraintEnd_toStartOf="@id/addMemberBtn" />

        <ImageView
            android:id="@+id/addMemberBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_add_friend"
            android:clickable="true"
            android:focusable="true"
            app:tint="?attr/colorOnSurfaceVariant"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="Add Member" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Content Container with Alphabet Index -->
    <FrameLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/searchBarContainer"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <!-- Members List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/membersList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="20dp"
            android:paddingEnd="40dp"
            android:clipToPadding="false"
            android:background="?attr/colorSurface" />

        <!-- Alphabet Index (Right Side) -->
        <LinearLayout
            android:id="@+id/alphabetIndex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:orientation="vertical"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:gravity="center">

            <TextView
                android:id="@+id/indexA"
                style="@style/AlphabetIndexLetter"
                android:text="A" />

            <TextView
                android:id="@+id/indexB"
                style="@style/AlphabetIndexLetter"
                android:text="B" />

            <TextView
                android:id="@+id/indexC"
                style="@style/AlphabetIndexLetter"
                android:text="C" />

            <TextView
                android:id="@+id/indexD"
                style="@style/AlphabetIndexLetter"
                android:text="D" />

            <TextView
                android:id="@+id/indexE"
                style="@style/AlphabetIndexLetter"
                android:text="E" />

            <TextView
                android:id="@+id/indexF"
                style="@style/AlphabetIndexLetter"
                android:text="F" />

            <TextView
                android:id="@+id/indexG"
                style="@style/AlphabetIndexLetter"
                android:text="G" />

            <TextView
                android:id="@+id/indexH"
                style="@style/AlphabetIndexLetter"
                android:text="H" />

            <TextView
                android:id="@+id/indexI"
                style="@style/AlphabetIndexLetter"
                android:text="I" />

            <TextView
                android:id="@+id/indexJ"
                style="@style/AlphabetIndexLetter"
                android:text="J" />

            <TextView
                android:id="@+id/indexK"
                style="@style/AlphabetIndexLetter"
                android:text="K" />

            <TextView
                android:id="@+id/indexL"
                style="@style/AlphabetIndexLetter"
                android:text="L" />

            <TextView
                android:id="@+id/indexM"
                style="@style/AlphabetIndexLetter"
                android:text="M" />

            <TextView
                android:id="@+id/indexN"
                style="@style/AlphabetIndexLetter"
                android:text="N" />

            <TextView
                android:id="@+id/indexO"
                style="@style/AlphabetIndexLetter"
                android:text="O" />

            <TextView
                android:id="@+id/indexP"
                style="@style/AlphabetIndexLetter"
                android:text="P" />

            <TextView
                android:id="@+id/indexQ"
                style="@style/AlphabetIndexLetter"
                android:text="Q" />

            <TextView
                android:id="@+id/indexR"
                style="@style/AlphabetIndexLetter"
                android:text="R" />

            <TextView
                android:id="@+id/indexS"
                style="@style/AlphabetIndexLetter"
                android:text="S" />

            <TextView
                android:id="@+id/indexT"
                style="@style/AlphabetIndexLetter"
                android:text="T" />

            <TextView
                android:id="@+id/indexU"
                style="@style/AlphabetIndexLetter"
                android:text="U" />

            <TextView
                android:id="@+id/indexV"
                style="@style/AlphabetIndexLetter"
                android:text="V" />

            <TextView
                android:id="@+id/indexW"
                style="@style/AlphabetIndexLetter"
                android:text="W" />

            <TextView
                android:id="@+id/indexX"
                style="@style/AlphabetIndexLetter"
                android:text="X" />

            <TextView
                android:id="@+id/indexY"
                style="@style/AlphabetIndexLetter"
                android:text="Y" />

            <TextView
                android:id="@+id/indexZ"
                style="@style/AlphabetIndexLetter"
                android:text="Z" />

        </LinearLayout>

    </FrameLayout>

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
