<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Remote Video (full screen, behind everything) -->
    <FrameLayout
        android:id="@+id/remoteVideoContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#1A1A1A"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Placeholder when no remote video -->
        <LinearLayout
            android:id="@+id/noVideoPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_call_lock"
                android:alpha="0.5"
                android:contentDescription="No video" />

            <TextView
                android:id="@+id/placeholderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video call connecting..."
                android:textSize="16sp"
                android:textColor="#888888"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </FrameLayout>

    <!-- Local Camera Preview (picture-in-picture, top-right corner) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/localVideoCard"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.camera.view.PreviewView
            android:id="@+id/localCameraPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>

    <!-- Top Overlay: Back button + Call info -->
    <LinearLayout
        android:id="@+id/topOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="60dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/backButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="60dp">

            <TextView
                android:id="@+id/contactName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/space_grotesk_bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/callStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connecting..."
                android:textSize="13sp"
                android:textColor="#AAAAAA"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

    </LinearLayout>

    <!-- Call Timer (shown when connected) -->
    <TextView
        android:id="@+id/callTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""
        android:textSize="14sp"
        android:textColor="#CCCCCC"
        android:fontFamily="@font/poppins_regular"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/topOverlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Control Buttons -->
    <LinearLayout
        android:id="@+id/controlButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="48dp"
        android:paddingTop="16dp"
        android:background="@drawable/video_call_bottom_gradient"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Mute Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/muteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_mic"
            app:fabSize="normal"
            app:fabCustomSize="56dp"
            app:maxImageSize="24dp"
            app:tint="#FFFFFF"
            app:backgroundTint="#44FFFFFF"
            app:elevation="4dp"
            app:borderWidth="0dp"
            android:contentDescription="Mute" />

        <!-- Camera Toggle Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/cameraToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_videocam"
            app:fabSize="normal"
            app:fabCustomSize="56dp"
            app:maxImageSize="24dp"
            app:tint="#FFFFFF"
            app:backgroundTint="#44FFFFFF"
            app:elevation="4dp"
            app:borderWidth="0dp"
            android:contentDescription="Toggle camera" />

        <!-- End Call Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/endCallButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_call_end"
            app:fabSize="normal"
            app:fabCustomSize="64dp"
            app:maxImageSize="28dp"
            app:tint="#FFFFFF"
            app:backgroundTint="#FF6B6B"
            app:elevation="4dp"
            app:borderWidth="0dp"
            android:contentDescription="End call" />

        <!-- Flip Camera Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/flipCameraButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_flip_camera"
            app:fabSize="normal"
            app:fabCustomSize="56dp"
            app:maxImageSize="24dp"
            app:tint="#FFFFFF"
            app:backgroundTint="#44FFFFFF"
            app:elevation="4dp"
            app:borderWidth="0dp"
            android:contentDescription="Flip camera" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
