<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <include
        android:id="@+id/walletContent"
        layout="@layout/fragment_wallet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav" />

    <!-- Bottom Navigation -->
        <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:background="@drawable/glass_nav_bg"
        android:clipToOutline="true"
        android:gravity="center_vertical"
                android:paddingBottom="0dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Messages Nav Item -->
        <LinearLayout
            android:id="@+id/navMessages"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_item_ripple"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@android:drawable/sym_action_chat"
                app:tint="?attr/colorOnSurfaceVariant"
                android:layout_marginBottom="2dp"
                android:contentDescription="Messages" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Messages"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

        <!-- Accounts Nav Item -->
        <LinearLayout
            android:id="@+id/navAccounts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_item_ripple"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_money"
                android:layout_marginBottom="2dp"
                app:tint="?attr/colorOnSurfaceVariant"
                android:contentDescription="Accounts" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accounts"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

        <!-- New Wallet Nav Item -->
        <LinearLayout
            android:id="@+id/navNewWallet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_item_ripple"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_wallet"
                app:tint="?attr/colorOnSurfaceVariant"
                android:layout_marginBottom="2dp"
                android:contentDescription="New Wallet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Wallet"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

        <!-- Recent Nav Item -->
        <LinearLayout
            android:id="@+id/navRecent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_item_ripple"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_clock"
                android:layout_marginBottom="2dp"
                android:contentDescription="Recent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent"
                android:textSize="10sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
