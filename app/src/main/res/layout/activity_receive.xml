<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <FrameLayout
            android:id="@+id/backButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back" />

        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Receive"
            android:textSize="28sp"
            android:textColor="#999999"
            android:fontFamily="@font/space_grotesk_bold"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Spacer for alignment -->
        <View
            android:layout_width="42dp"
            android:layout_height="42dp" />

    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="24dp"
            android:paddingBottom="32dp"
            android:gravity="center_horizontal">

            <!-- Currency Display (non-clickable) -->
            <LinearLayout
                android:id="@+id/currencyDropdown"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/wallet_dropdown_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">

                <ImageView
                    android:id="@+id/selectedCurrencyIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_zcash"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Currency Icon" />

                <TextView
                    android:id="@+id/selectedCurrencyName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Zcash"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppins_medium" />

            </LinearLayout>

            <!-- Currency Label -->
            <TextView
                android:id="@+id/selectedCurrencySymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ZEC"
                android:textSize="14sp"
                android:textColor="#888888"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="16dp" />

            <!-- QR Code -->
            <ImageView
                android:id="@+id/qrCodeImage"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="QR Code" />

            <!-- Address Type Selector (Only for ZEC) -->
            <LinearLayout
                android:id="@+id/addressTypeSelector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/wallet_token_bg"
                android:padding="4dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/unifiedAddressButton"
                    android:layout_width="120dp"
                    android:layout_height="36dp"
                    android:text="Unified"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/wallet_action_button_bg"
                    android:textAllCaps="false" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/transparentAddressButton"
                    android:layout_width="120dp"
                    android:layout_height="36dp"
                    android:text="Exchange"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@android:color/transparent"
                    android:textAllCaps="false" />

            </LinearLayout>

            <!-- Address Type Label (Only for ZEC) -->
            <TextView
                android:id="@+id/addressTypeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For private SecureLegion transfers"
                android:textSize="11sp"
                android:textColor="#666666"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <!-- Deposit Address -->
            <TextView
                android:id="@+id/depositAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="12sp"
                android:textColor="#CCCCCC"
                android:fontFamily="monospace"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Wallet Info Box -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/wallet_token_bg"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <!-- Wallet Name Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Wallet Name"
                        android:textSize="12sp"
                        android:textColor="#888888"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/walletNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wallet 1"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/poppins_medium" />

                </LinearLayout>

                <!-- Address Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Address"
                        android:textSize="12sp"
                        android:textColor="#888888"
                        android:fontFamily="@font/poppins_regular" />

                    <TextView
                        android:id="@+id/walletAddressShort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="monospace" />

                </LinearLayout>

            </LinearLayout>

            <!-- Copy Button -->
            <TextView
                android:id="@+id/copyAddressButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="COPY ADDRESS"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/wallet_dropdown_bg"
                android:gravity="center"
                android:fontFamily="@font/space_grotesk_bold"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="16dp" />

            <!-- Share QR Button -->
            <TextView
                android:id="@+id/shareQrButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="SHARE QR CODE"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/wallet_dropdown_bg"
                android:gravity="center"
                android:fontFamily="@font/space_grotesk_bold"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:background="#0A0A0A"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Messages Nav Item -->
        <LinearLayout
            android:id="@+id/navMessages"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_item_ripple"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/sym_action_chat"
                android:tint="@color/text_gray"
                android:layout_marginBottom="4dp"
                android:contentDescription="Messages" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Messages"
                android:textSize="11sp"
                android:textColor="@color/text_gray"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

        <!-- Wallet Nav Item -->
        <LinearLayout
            android:id="@+id/navWallet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_item_ripple"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_wallet"
                android:layout_marginBottom="4dp"
                android:tint="@color/text_gray"
                android:contentDescription="Wallet" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet"
                android:textSize="11sp"
                android:textColor="@color/text_gray"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

        <!-- Add Friend Nav Item -->
        <LinearLayout
            android:id="@+id/navAddFriend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_item_ripple"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add_friend"
                android:tint="@color/text_gray"
                android:layout_marginBottom="4dp"
                android:contentDescription="Add Friend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Friend"
                android:textSize="11sp"
                android:textColor="@color/text_gray"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

        <!-- Lock Nav Item -->
        <LinearLayout
            android:id="@+id/navLock"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_item_ripple"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lock"
                android:layout_marginBottom="4dp"
                android:tint="@color/text_gray"
                android:contentDescription="Lock" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lock"
                android:textSize="11sp"
                android:textColor="@color/text_gray"
                android:fontFamily="@font/poppins_medium" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
