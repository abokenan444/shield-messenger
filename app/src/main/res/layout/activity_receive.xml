<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <FrameLayout
            android:id="@+id/backButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back" />

        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Receive"
            android:textSize="28sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="@font/space_grotesk_bold"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Spacer for alignment -->
        <View
            android:layout_width="42dp"
            android:layout_height="42dp" />

    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="24dp"
            android:paddingBottom="32dp"
            android:gravity="center_horizontal">

            <!-- Wallet Display -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/wallet_dropdown_bg"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:gravity="center_vertical"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="48dp">

                <ImageView
                    android:id="@+id/walletChainIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_solana"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Chain Icon" />

                <TextView
                    android:id="@+id/walletNameText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Wallet 1"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/poppins_medium" />

                <FrameLayout
                    android:id="@+id/walletSettingsButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/settings_icon_bg"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_edit"
                        app:tint="?attr/colorOnSurfaceVariant"
                        android:contentDescription="Settings" />

                </FrameLayout>

            </LinearLayout>

            <!-- QR Code -->
            <ImageView
                android:id="@+id/qrCodeImage"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginBottom="48dp"
                android:contentDescription="QR Code" />

            <!-- Address Type Selector (Only for ZEC) -->
            <LinearLayout
                android:id="@+id/addressTypeSelector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/wallet_token_bg"
                android:padding="4dp"
                android:layout_marginBottom="24dp"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/unifiedAddressButton"
                    android:layout_width="120dp"
                    android:layout_height="36dp"
                    android:text="Unified"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/wallet_action_button_bg"
                    android:textAllCaps="false" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/transparentAddressButton"
                    android:layout_width="120dp"
                    android:layout_height="36dp"
                    android:text="Exchange"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@android:color/transparent"
                    android:textAllCaps="false" />

            </LinearLayout>

            <!-- Address Display -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/wallet_dropdown_bg"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="13sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/depositAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Loading..."
                    android:textSize="13sp"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginEnd="12dp" />

                <FrameLayout
                    android:id="@+id/copyAddressButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_copy"
                        app:tint="?attr/colorOnSurfaceVariant"
                        android:contentDescription="Copy" />

                </FrameLayout>

            </LinearLayout>

            <!-- Share Button -->
            <TextView
                android:id="@+id/shareQrButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Share"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:background="@drawable/wallet_dropdown_bg"
                android:gravity="center"
                android:fontFamily="@font/space_grotesk_bold"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
