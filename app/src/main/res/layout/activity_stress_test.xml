<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <FrameLayout
            android:id="@+id/backButton"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back" />
        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/stress_test"
            android:textSize="24sp"
            android:textColor="@color/lock_title_gray"
            android:fontFamily="@font/space_grotesk_bold"
            android:gravity="center" />

        <!-- Spacer for alignment -->
        <View
            android:layout_width="42dp"
            android:layout_height="42dp" />
    </LinearLayout>

    <!-- Content Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="false"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp">

    <!-- Scenario Selector -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scenario"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginBottom="4dp"/>

    <Spinner
        android:id="@+id/scenarioSpinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?attr/colorSurfaceContainer"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Message Count Input -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/message_count"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/messageCountInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?attr/colorSurfaceContainer"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="@color/text_gray"
        android:hint="@string/hint_10"
        android:inputType="number"
        android:padding="12dp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginBottom="16dp"/>

    <!-- Contact Selector -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/test_contact"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginBottom="4dp"/>

    <Spinner
        android:id="@+id/contactSpinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="?attr/colorSurfaceContainer"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <!-- Control Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <FrameLayout
            android:id="@+id/startButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/settings_box_bg"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/start"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/space_grotesk_bold"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/stopButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/settings_box_bg"
            android:clickable="true"
            android:focusable="true"
            android:enabled="false"
            android:alpha="0.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/stop"
                android:textSize="16sp"
                android:textColor="#EF4444"
                android:fontFamily="@font/space_grotesk_bold"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>

    <!-- Summary Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/settings_box_bg"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/sentCountText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sent_0"
            android:textColor="?attr/colorOnSurface"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_regular"/>

        <TextView
            android:id="@+id/deliveredCountText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ok_0"
            android:textColor="@color/success_green"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_regular"/>

        <TextView
            android:id="@+id/failedCountText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/fail_0"
            android:textColor="@color/warning_red"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_regular"/>
    </LinearLayout>

    <!-- Event Log -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/event_log"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginBottom="4dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/eventLogRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/settings_box_bg"
        android:padding="12dp"
        android:layout_marginBottom="8dp"/>

    <!-- Safety Valve Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <FrameLayout
            android:id="@+id/dumpCountersButton"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@drawable/settings_box_bg"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/dump_counters"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_medium" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/resetStateButton"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="@drawable/settings_box_bg"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/reset_state"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_medium" />
        </FrameLayout>
    </LinearLayout>

    </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
