<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_bg"
    android:paddingTop="8dp"
    android:paddingBottom="32dp">

    <!-- Handle Bar -->
    <View
        android:layout_width="60dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:background="#4A4A4A"
        android:layout_marginBottom="20dp" />

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seed Phrase"
        android:textSize="24sp"
        android:textColor="@color/text_white"
        android:fontFamily="@font/space_grotesk_bold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Wallet Address Preview -->
    <LinearLayout
        android:id="@+id/walletAddressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/settings_box_bg"
        android:padding="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/walletChainIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_solana"
            android:layout_marginEnd="12dp"
            android:contentDescription="Chain icon" />

        <TextView
            android:id="@+id/walletAddressText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0x1234...5678"
            android:textSize="14sp"
            android:textColor="@color/text_white"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginEnd="12dp" />

        <ImageView
            android:id="@+id/copyAddressIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_copy"
            android:tint="@color/text_gray"
            android:contentDescription="Copy address" />

    </LinearLayout>

    <!-- Info Label -->
    <TextView
        android:id="@+id/infoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your 12-word seed phrase:"
        android:textSize="12sp"
        android:textColor="#888888"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="8dp" />

    <!-- Seed Phrase Container with Copy Icon -->
    <LinearLayout
        android:id="@+id/seedPhraseContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/settings_box_bg"
        android:padding="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/seedPhraseText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="word1 word2 word3 word4 word5 word6 word7 word8 word9 word10 word11 word12"
            android:textSize="14sp"
            android:textColor="@color/text_white"
            android:fontFamily="monospace"
            android:lineSpacingMultiplier="1.4"
            android:layout_marginEnd="12dp" />

        <ImageView
            android:id="@+id/copySeedPhraseIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_copy"
            android:tint="@color/text_gray"
            android:contentDescription="Copy seed phrase" />

    </LinearLayout>

    <!-- Birthday Height Container (for Zcash) -->
    <TextView
        android:id="@+id/birthdayHeightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birthday Height:"
        android:textSize="12sp"
        android:textColor="#888888"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/birthdayHeightContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/settings_box_bg"
        android:padding="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/birthdayHeightText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2500000"
            android:textSize="14sp"
            android:textColor="@color/text_white"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginEnd="12dp" />

        <ImageView
            android:id="@+id/copyBirthdayHeightIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_copy"
            android:tint="@color/text_gray"
            android:contentDescription="Copy birthday height" />

    </LinearLayout>

    <!-- Close Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/closeButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/poppins_medium"
        android:text="Close"
        android:textAllCaps="false"
        android:textColor="#888888"
        android:textSize="16sp" />

</LinearLayout>
