<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_bg"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="8dp"
    android:paddingBottom="24dp">

    <!-- Handle Bar -->
    <View
        android:layout_width="60dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:background="#4A4A4A"
        android:layout_marginBottom="16dp" />

    <!-- Header with title and share -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/request_details"
            android:textSize="22sp"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="@font/space_grotesk_bold"
            android:gravity="center" />

        <FrameLayout
            android:id="@+id/detailsShareButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/top_icon_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_menu_share"
                app:tint="?attr/colorOnSurfaceVariant"
                android:contentDescription="Share" />

        </FrameLayout>

    </LinearLayout>

    <!-- Status Message -->
    <TextView
        android:id="@+id/detailsStatusMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/you_have_successfully_requested"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Amount Display -->
    <TextView
        android:id="@+id/detailsAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/n_000_2"
        android:textSize="42sp"
        android:textColor="#C0C0C0"
        android:fontFamily="@font/space_grotesk_bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Details Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/wallet_token_bg"
        android:padding="16dp"
        android:layout_marginBottom="24dp">

        <!-- Requested (crypto) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/requested"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/detailsCryptoAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/n_000_sol"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>

        <!-- USD Value -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/usd_value"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/detailsUsdValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/n_000_2"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>

        <!-- Payment Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/payment_type"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/detailsPaymentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/private_text"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>

        <!-- Network Fee -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/network_fee"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/detailsNetworkFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/n_0000005_sol_2"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>

        <!-- Request ID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/request_id"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/detailsRequestId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text=""
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_medium"
                android:ellipsize="middle"
                android:singleLine="true" />
        </LinearLayout>

        <!-- Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/time"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/detailsTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>

        <!-- Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/date"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/detailsDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/poppins_medium" />
        </LinearLayout>

    </LinearLayout>

    <!-- Done Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/detailsDoneButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/swap_button_bg"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/done"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnSurface"
        android:textSize="16sp" />

</LinearLayout>
