<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:background="@android:color/transparent"
    android:paddingStart="0dp"
    android:paddingEnd="0dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <!-- Contact Avatar -->
    <com.securelegion.views.AvatarView
        android:id="@+id/contactAvatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:contentDescription="Contact Photo" />

    <!-- Hidden for backward compatibility -->
    <TextView
        android:id="@+id/contactInitial"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <!-- Contact Name -->
    <TextView
        android:id="@+id/contactName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:text="@wizard"
        android:textSize="16sp"
        android:textColor="?attr/colorOnSurface"
        android:fontFamily="@font/poppins_medium" />

    <!-- Star Icon (hidden) -->
    <ImageView
        android:id="@+id/starIcon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <!-- Hidden fields for backward compatibility -->
    <TextView
        android:id="@+id/messageTimestamp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/lastMessage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/contactAddress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/friendsIcon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/pendingBadge"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</LinearLayout>
