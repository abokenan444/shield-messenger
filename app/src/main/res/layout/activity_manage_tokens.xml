<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/header_bg">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/manageTokensHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/header_bg"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="‹"
            android:textSize="32sp"
            android:textColor="@color/text_white"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icon_header"
            android:layout_marginStart="24dp"
            android:contentDescription="Secure Legion Logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MANAGE TOKENS"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:gravity="center"
            android:layout_marginEnd="64dp" />

    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/manageTokensHeader"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Info Box -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/info_box_bg"
                android:padding="20dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage Your Tokens"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add or remove tokens from your wallet. Only tokens you add will be visible on your main wallet screen."
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:lineSpacingMultiplier="1.3" />

            </LinearLayout>

            <!-- Add Token Button -->
            <TextView
                android:id="@+id/addTokenButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Add Custom Token"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_white"
                android:background="@drawable/metallic_button_bg"
                android:gravity="center"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:elevation="6dp"
                android:layout_marginBottom="24dp" />

            <!-- Popular Tokens Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Popular Tokens"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_white"
                android:layout_marginBottom="16dp" />

            <!-- SOL Token -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/settings_item_bg"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_solana"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Solana" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Solana"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SOL"
                        android:textSize="13sp"
                        android:textColor="@color/text_gray" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✓ Active"
                    android:textSize="14sp"
                    android:textColor="@color/success_green"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- USDC Token -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/settings_item_bg"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_usdc"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="USDC" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USD Coin"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USDC"
                        android:textSize="13sp"
                        android:textColor="@color/text_gray" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✓ Active"
                    android:textSize="14sp"
                    android:textColor="@color/success_green"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
