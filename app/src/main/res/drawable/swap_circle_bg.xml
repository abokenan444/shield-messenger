<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Mask ring matching page background â€” hides card border at overlap -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#000000" />
        </shape>
    </item>
    <!-- Circle: translucent fill + subtle border -->
    <item
        android:top="3dp"
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp">
        <shape android:shape="oval">
            <solid android:color="#15FFFFFF" />
            <stroke
                android:width="1.5dp"
                android:color="#40FFFFFF" />
        </shape>
    </item>
</layer-list>
