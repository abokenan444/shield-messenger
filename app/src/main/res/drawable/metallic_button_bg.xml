<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#40000000" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Main button body -->
    <item android:bottom="4dp">
        <layer-list>
            <!-- Base gradient (dark gray) -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="135"
                        android:startColor="#4A5568"
                        android:centerColor="#3A4555"
                        android:endColor="#2D3748"
                        android:type="linear" />
                    <corners android:radius="12dp" />
                </shape>
            </item>

            <!-- Top highlight (inset light) -->
            <item android:top="1dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="270"
                        android:startColor="#40FFFFFF"
                        android:centerColor="#10FFFFFF"
                        android:endColor="#00FFFFFF"
                        android:type="linear" />
                    <corners android:radius="12dp" />
                </shape>
            </item>

            <!-- Bottom shadow (inset dark) -->
            <item android:bottom="1dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="90"
                        android:startColor="#4D000000"
                        android:centerColor="#10000000"
                        android:endColor="#00000000"
                        android:type="linear" />
                    <corners android:radius="12dp" />
                </shape>
            </item>

            <!-- Diagonal shine overlay -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="135"
                        android:startColor="#00FFFFFF"
                        android:centerColor="#26FFFFFF"
                        android:endColor="#00FFFFFF"
                        android:type="linear" />
                    <corners android:radius="12dp" />
                </shape>
            </item>

            <!-- Border -->
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="#26FFFFFF" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</layer-list>
