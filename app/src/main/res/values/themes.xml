<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SecureLegion" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/accent_blue</item>
        <item name="colorOnPrimary">@color/text_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_blue</item>
        <item name="colorSecondaryVariant">@color/primary_blue</item>
        <item name="colorOnSecondary">@color/text_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#000000</item>
        <!-- Background colors -->
        <item name="android:windowBackground">#000000</item>
        <item name="android:colorBackground">#000000</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_white</item>
        <item name="android:textColorSecondary">@color/text_gray</item>
        <!-- AlertDialog styling -->
        <item name="alertDialogTheme">@style/CustomAlertDialog</item>
        <!-- Edge-to-edge and display cutout support -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="backgroundColor">@color/card_bg</item>
        <item name="colorSurface">@color/card_bg</item>
        <item name="android:background">@drawable/dialog_rounded_bg</item>
        <item name="shapeAppearanceOverlay">@style/DialogRoundedCorners</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:textColorPrimary">@color/text_white</item>
        <item name="android:textColorSecondary">@color/text_white</item>
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DialogBodyTextStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary_blue</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="DialogRoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="DialogTitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="DialogBodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <!-- Secure Legion Custom Progress Bar Style -->
    <style name="SecureLegionProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/secure_legion_progress_bar</item>
        <item name="android:minHeight">12dp</item>
        <item name="android:maxHeight">12dp</item>
    </style>

    <!-- Seed Word Input Style -->
    <style name="SeedWordInput">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/lock_password_input_bg</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#666666</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Theme for WelcomeActivity - disables starting window preview to prevent cached screenshot flash -->
    <style name="Theme.SecureLegion.NoStartingWindow" parent="Theme.SecureLegion">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- Switch Theme -->
    <style name="SwitchTheme" parent="Theme.MaterialComponents">
        <item name="colorControlActivated">#4A90E2</item>
        <item name="colorSwitchThumbNormal">#888888</item>
        <item name="android:colorForeground">#333333</item>
    </style>
</resources>
