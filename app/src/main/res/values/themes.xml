<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShieldMessenger" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#888888</item>
        <item name="colorPrimaryContainer">#666666</item>
        <item name="colorOnPrimary">@color/text_white</item>
        <item name="colorOnPrimaryContainer">@color/text_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#888888</item>
        <item name="colorSecondaryContainer">#666666</item>
        <item name="colorOnSecondary">@color/text_white</item>
        <item name="colorOnSecondaryContainer">@color/text_white</item>
        <!-- Tertiary color. -->
        <item name="colorTertiary">#888888</item>
        <item name="colorTertiaryContainer">#666666</item>
        <item name="colorOnTertiary">@color/text_white</item>
        <item name="colorOnTertiaryContainer">@color/text_white</item>
        <!-- Surface colors -->
        <item name="colorSurface">#000000</item>
        <item name="colorOnSurface">@color/text_white</item>
        <item name="colorSurfaceVariant">#1A1A1A</item>
        <item name="colorOnSurfaceVariant">@color/text_gray</item>
        <item name="colorSurfaceContainerLowest">#000000</item>
        <item name="colorSurfaceContainerLow">#0A0A0A</item>
        <item name="colorSurfaceContainer">#141414</item>
        <item name="colorSurfaceContainerHigh">#1A1A1A</item>
        <item name="colorSurfaceContainerHighest">#222222</item>
        <!-- Outline -->
        <item name="colorOutline">#444444</item>
        <item name="colorOutlineVariant">#333333</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#000000</item>
        <item name="android:navigationBarColor">#000000</item>
        <!-- Background colors -->
        <item name="android:windowBackground">#000000</item>
        <item name="android:colorBackground">#000000</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_white</item>
        <item name="android:textColorSecondary">@color/text_gray</item>
        <item name="android:textColorHighlight">#444444</item>
        <item name="android:textColorLink">#888888</item>
        <item name="colorControlHighlight">#444444</item>
        <!-- Checkbox colors - prevent blue override -->
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="colorControlNormal">#666666</item>
        <!-- AlertDialog styling -->
        <item name="alertDialogTheme">@style/CustomAlertDialog</item>
        <item name="materialAlertDialogTheme">@style/CustomAlertDialog</item>
        <!-- Edge-to-edge and display cutout support -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <style name="CustomAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@drawable/glass_dialog_bg</item>
        <item name="backgroundColor">#101010</item>
        <!-- Force ALL surface colors to same value so no internal panel stands out -->
        <item name="colorSurface">#101010</item>
        <item name="colorSurfaceVariant">#101010</item>
        <item name="colorSurfaceContainerLowest">#101010</item>
        <item name="colorSurfaceContainerLow">#101010</item>
        <item name="colorSurfaceContainer">#101010</item>
        <item name="colorSurfaceContainerHigh">#101010</item>
        <item name="colorSurfaceContainerHighest">#101010</item>
        <!-- Disable elevation overlay that tints surfaces at different elevations -->
        <item name="elevationOverlayEnabled">false</item>
        <!-- Kill Material3 outlines everywhere inside dialog -->
        <item name="colorOutline">@android:color/transparent</item>
        <item name="colorOutlineVariant">@android:color/transparent</item>
        <item name="shapeAppearanceOverlay">@style/DialogRoundedCorners</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:textColorPrimary">@color/text_white</item>
        <item name="android:textColorSecondary">@color/text_white</item>
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DialogBodyTextStyle</item>
        <!-- Kill internal panel backgrounds that draw outlines -->
        <item name="materialAlertDialogTitlePanelStyle">@style/DialogPanel.NoOutline</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">#888888</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="DialogRoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="DialogPanel.NoOutline" parent="MaterialAlertDialog.Material3.Title.Panel">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DialogTitleTextStyle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="DialogBodyTextStyle" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/text_white</item>
    </style>

    <!-- Shield Messenger Custom Progress Bar Style -->
    <style name="ShieldMessengerProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/shield_messenger_progress_bar</item>
        <item name="android:minHeight">12dp</item>
        <item name="android:maxHeight">12dp</item>
    </style>

    <!-- Seed Word Input Style -->
    <style name="SeedWordInput">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/lock_password_input_bg</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#666666</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Theme for WelcomeActivity - disables starting window preview to prevent cached screenshot flash -->
    <style name="Theme.ShieldMessenger.NoStartingWindow" parent="Theme.ShieldMessenger">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- Switch Theme -->
    <style name="SwitchTheme" parent="Theme.Material3.DayNight">
        <item name="colorControlActivated">#888888</item>
        <item name="colorSwitchThumbNormal">#888888</item>
        <item name="android:colorForeground">#333333</item>
        <item name="colorPrimary">#888888</item>
        <item name="colorSecondary">#888888</item>
        <item name="colorAccent">#888888</item>
    </style>

    <!-- Keypad Button Style -->
    <style name="KeypadButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Splash Screen Theme - Android 12+ system splash screen -->
    <style name="Theme.ShieldMessenger.Splash" parent="Theme.SplashScreen">
        <!-- Full gray background (like Session) -->
        <item name="windowSplashScreenBackground">#1C1C1C</item>

        <!-- Centered logo (no white circle) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/secure_logo_new</item>

        <!-- Make logo bigger (default is too small) -->
        <item name="windowSplashScreenIconBackgroundColor">#1C1C1C</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">#1C1C1C</item>
        <item name="android:navigationBarColor">#000000</item>

        <!-- Post-splash theme (your regular theme) -->
        <item name="postSplashScreenTheme">@style/Theme.ShieldMessenger</item>
    </style>
</resources>
